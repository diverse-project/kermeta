<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.kermeta</groupId>
	<artifactId>fr.irisa.triskell.eclipse.util-NoUI</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>Kermeta - Eclipse Util - no UI</name>
	<build>
		<resources>
			<resource>
				<targetPath>../filtered-sources/java</targetPath>
				<filtering>true</filtering>
				<directory>src</directory>
				<includes>
				</includes>
				<excludes>
					<exclude>**/fr/irisa/triskell/eclipse/console/EclipseConsole.java</exclude>
					<exclude>**/fr/irisa/triskell/eclipse/console/IOConsole.java</exclude>
					<exclude>**/fr/irisa/triskell/eclipse/console/KermetaConsole.java</exclude>
					<exclude>**/fr/irisa/triskell/eclipse/console/LocalIOConsole.java</exclude>
					<exclude>**/fr/irisa/triskell/eclipse/console/messages/ConsoleMessage.java</exclude>
					<exclude>**/fr/irisa/triskell/eclipse/console/messages/ErrorMessage.java</exclude>
					<exclude>**/fr/irisa/triskell/eclipse/console/messages/InfoMessage.java</exclude>
					<exclude>**/fr/irisa/triskell/eclipse/console/messages/KermetaMessage.java</exclude>
					<exclude>**/fr/irisa/triskell/eclipse/console/messages/ObjectKermetaMessage.java</exclude>
					<exclude>**/fr/irisa/triskell/eclipse/console/messages/OKMessage.java</exclude>
					<exclude>**/fr/irisa/triskell/eclipse/console/messages/ThrowableMessage.java</exclude>
					<exclude>**/fr/irisa/triskell/eclipse/console/messages/WarningMessage.java</exclude>
					<exclude>**/fr/irisa/triskell/eclipse/filters/FilteredResourceSelectionDialog.java</exclude>
					<exclude>**/fr/irisa/triskell/eclipse/plugin/Activator.java</exclude>
					<exclude>**/fr/irisa/triskell/eclipse/resources/EclipseMarkerHelper.java</exclude>
					<exclude>**/fr/irisa/triskell/eclipse/util/handlers/OpenEditorHandler.java</exclude>
					<exclude>**/fr/irisa/triskell/eclipse/wizard/AbstractExampleWizard.java</exclude>
					<exclude>**/fr/irisa/triskell/eclipse/wizard/ActivableDestFileWizardPage.java</exclude>
					<exclude>**/fr/irisa/triskell/eclipse/wizard/DestFileWizardPage.java</exclude>
					<exclude>**/fr/irisa/triskell/eclipse/wizard/MergeableDestFileWizardPage.java</exclude>
					<exclude>**/fr/irisa/triskell/eclipse/wizard/WizardHelper.java</exclude>
					<exclude>**/org/kermeta/jface/preference/HelpfulFileFieldEditor.java</exclude>
					<exclude>**/org/kermeta/jface/preference/HelpfulTextFieldEditor.java</exclude>
					<exclude>**/org/kermeta/jface/preference/TextFieldEditor.java</exclude>
				</excludes>
			</resource>
			<resource>
				<directory>src-noSwt</directory>
			</resource>
		</resources>
		<sourceDirectory>target/filtered-sources/java</sourceDirectory>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.0.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.mod4j.org.eclipse.emf</groupId>
			<artifactId>ecore</artifactId>
			<version>2.5.0</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.mod4j.org.eclipse.core</groupId>
			<artifactId>resources</artifactId>
			<version>3.5.0</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.mod4j.org.eclipse.emf.ecore</groupId>
			<artifactId>xmi</artifactId>
			<version>2.5.0</version>
			<scope>compile</scope>
		</dependency>
	</dependencies>
	 <distributionManagement>
		<repository>
      		<id>tipimouss-local-maven-repository</id>
      		<name>Tipimouss Local release repository</name>
      		<url>file:/var/www/html/maven2</url>
    	</repository>
    	<snapshotRepository>
      		<id>tipimouss-local-maven-repository</id>
      		<name>Tipimouss Local  snapshot repository</name>
      		<url>file:/var/www/html/maven2-snapshots</url>
    	</snapshotRepository>		
	</distributionManagement>
</project>