package km2ecore::helper::kermeta;


require kermeta

using kermeta::language::structure
using kermeta::standard

class ConstraintHelper
{
	operation isPre(c : Constraint) : Boolean is do 
		result := false
		var op : Operation init c.container().asType(Operation)
		if ( op != void ) then
			result := op.~pre.contains(c)
		end
	end

	operation isPost(c : Constraint) : Boolean is do 
		result := false
		var op : Operation init c.container().asType(Operation)
		if ( op != void ) then
			result := op.~post.contains(c)
		end
	end
}