package km2ecore::helper::kermeta;


require kermeta

using kermeta::language::structure
using kermeta::standard

class ObjectHelper
{
	operation getPropertyValue(o : Object, propertyName : String) : Property is do 
		var classDefinition : ClassDefinition init o.getMetaClass().typeDefinition.asType(ClassDefinition)
		result := (classDefinition.allAttribute.detect{ p | p.asType(Property).name == propertyName }).asType(Property)
	end
}