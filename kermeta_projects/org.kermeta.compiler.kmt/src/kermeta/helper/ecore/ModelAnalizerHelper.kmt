package km2ecore::helper::ecore;

require kermeta
require "http://www.eclipse.org/emf/2002/Ecore"

using kermeta::language::structure
using ecore

class ModelAnalizer {
	operation isExtendedBy( extended_class : EClass , super_class : EClass ) : Boolean is do
		result := false
		
		//stdio.writeln("super_class: " + super_class.name + " - " + super_class.toString())
		//stdio.writeln("extended_class: " + extended_class.name + " - " + extended_class.toString())
		//stdio.writeln("extended_class: " + extended_class.eGenericSuperTypes.one().toString())
		//stdio.writeln("extended_class: " + extended_class.eGenericSuperTypes.toString() + " - " + extended_class.eGenericSuperTypes.one().toString() + " - " + extended_class.eGenericSuperTypes.one().eClassifier.toString())
		if super_class == extended_class.eGenericSuperTypes.one().eClassifier then
			result := true
		end
	end
	
	operation isInterfaceBy( extended_class : EClass , super_class : EClass ) : Boolean is do
		result := not isExtendedBy( extended_class, super_class )
	end
}