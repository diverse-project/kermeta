  <extension
        point="org.eclipse.ui.startup">
     <startup class="fr.irisa.triskell.kermeta.kpm.plugin.KPMStartup"/>
  </extension>
  <extension
        point="org.eclipse.ui.preferencePages">
     <page
           category="fr.irisa.triskell.kermeta.ui.preferences.KermetaPreferencePage"
           class="fr.irisa.triskell.kermeta.kpm.preferences.KPMPreferencePage"
           id="fr.irisa.triskell.kermeta.kpm.preferencePage"
           name="KPM"/>
  </extension>
  <extension
        point="org.eclipse.ui.propertyPages">
     <page
           class="fr.irisa.triskell.kermeta.kpm.properties.KPMPropertyPage"
           id="fr.irisa.triskell.kermeta.kpm.page1"
           name="Kermeta"
           objectClass="org.eclipse.core.resources.IProject">
        <filter
         	name="projectNature"
         	value="fr.irisa.triskell.kermeta.KermetaNature">
      	</filter>
     </page>
  </extension>



</plugin>

