<plugin>
   <extension-point id="actions" name="KPMAction" schema="extension/actions.exsd"/>
   <extension-point id="registeredFile" name="RegisteredFile" schema="extension/registeredFile.exsd"/>

  <extension point="org.eclipse.emf.ecore.generated_package">
    <package 
       uri = "http://kpm" 
       class = "fr.irisa.triskell.kermeta.kpm.KpmPackage"
       genModel = "model/kpm.genmodel" /> 
  </extension>
