/*
 * General description of the test suite defined inside this class
 */

class TestVariable
{    
    /** Main operation that embeds all the tests */
     operation main_operation() is do
     end
     

    /** test the init of a String var */
     operation op1() : kermeta::standard::String is do
     	var v : kermeta::standard::String init "hello"
     	if (v != "hello") then 
     		raise "error"
     	end
     end

     /** test the init of a  */
    operation op2() : kermeta::standard::Integer is do
    	var v : kermeta::standard::Integer init 1
    	if (v != 1) then 
    		raise "error"
    	end
     end

}
