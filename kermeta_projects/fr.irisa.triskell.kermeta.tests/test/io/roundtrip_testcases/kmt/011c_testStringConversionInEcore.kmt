@mainClass "testString::Main"
@mainOperation "main"

@uri "http://TestString"
package testString;

require kermeta

/** This class is used to test the conversion of KMT 2 Ecore 
 *  Notice : when we declare "using kermeta::language::structure", the alias String is used, instead of the real
 *  Class String. This leads to a wrong Ecore conversion
 */
class Main
{
	/** Test the use of the String class */
    operation main(a : kermeta::standard::String) : Void is do 
		var b : kermeta::standard::String
		b := a
    end
    
    /** Test the use of the String primitive type (kermeta::language::structure::String) */
    operation testStringAsPrimitiveType(a : kermeta::language::structure::String) : Void is do
    	var b : kermeta::language::structure::String
    	b := a
    end
    
    /** Test the use of the String as a class and a primitive type at the same time */
    operation testStringTwice(a : kermeta::standard::String) : Void is do
    	var b : kermeta::language::structure::String
    	b := a
    end
}