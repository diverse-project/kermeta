<project name="KerMetaInterpreterJavadoc" default="all">
	<!-- configuration properties -->
	<property name="deployment.dest" location="\\\\jersey\\triskell\\www\\triskell\\prive\\docs"/>

	<!-- project configuration -->
	<property name="project.base.dir" location=".."/>
	<property name="project.name" value="KerMetaInterpreter"/>
	<property name="build.dir" location="${project.base.dir}/build"/>
	<property name="build.docbook.dir" location="${build.dir}/docbook42"/>
	<property name="OOo.source.dir" location="${project.base.dir}/src/OOo"/>
	<property name="OOo.source.file" location="${OOo.source.dir}/${project.name}.sxw"/>
	<!--<property name="deployment.dest" location="\\\\jersey\\triskell\\www\\triskell\\softwares\\kermeta\\docs"/>-->
	<property name="deployment.dest" location="\\\\jersey\\triskell\\www\\kermeta.org\\docs"/>
			
	<target name="all" depends="javadoc">
	</target>
	
	<target name="javadoc" depends="clean">
        <javadoc destdir="${build.dir}\javadoc\${project.name}" 
        	access="private" 
        	use="true" 
        	notree="false" 
        	nonavbar="false" 
        	noindex="false" 
        	splitindex="true" 
        	author="true" 
        	version="false" 
        	nodeprecatedlist="false" 
        	nodeprecated="false" 
        	sourcefiles="" 
        	sourcepath="../../fr.irisa.triskell.kermeta.interpreter/src/java;
        		../../fr.irisa.triskell.kermeta.interpreter/test/junit" 
        	classpath="../../fr.irisa.triskell.kermeta.interpreter/lib/thirdparty/antlr.jar;
        		C:\eclipse3.0\eclipse\plugins\org.eclipse.emf.common_2.0.1\runtime\common.jar;
        		../../fr.irisa.triskell.kermeta.model/build/class;
        		../../fr.irisa.triskell.kermeta.interpreter/lib/thirdparty/ldt-core.jar;
        		../../fr.irisa.triskell.kermeta.model/lib/thirdparty/log4j.jar;
        		../../fr.irisa.triskell.kermeta.interpreter/lib/io_kermeta.jar;
        		../../fr.irisa.triskell.kermeta.interpreter/build/class;
        		../../fr.irisa.triskell.kermeta.interpreter/lib/thirdparty/emfatic-core.jar;
        		C:\eclipse3.0\eclipse\plugins\org.eclipse.emf.ecore.xmi_2.0.1\runtime\ecore.xmi.jar;
        		../../fr.irisa.triskell.kermeta.interpreter/lib/thirdparty/junit.jar;
        		C:\eclipse3.0\eclipse\plugins\org.eclipse.emf.ecore_2.0.1\runtime\ecore.jar" 
        	doctitle="Kermeta Interpreter and java Framework">
        	<packageset dir="../../fr.irisa.triskell.kermeta.interpreter/src/java" defaultexcludes="yes">
    	    	<include name="fr/irisa/triskell/**"/>
    	    </packageset>
        	<packageset dir="../../fr.irisa.triskell.kermeta.io/src/java" defaultexcludes="yes">
        		<include name="fr/irisa/triskell/**"/>
      		</packageset>
        </javadoc>
    </target>

	<target name="deploy" description="copy documentation files to http://www.irisa.fr/triskell/prive/docs" depends="javadoc">
  		<delete dir="${deployment.dest}\\javadoc\\${project.name}" failonerror="false"/>

  		<copy todir="${deployment.dest}\\javadoc\${project.name}">
  			<fileset dir="${build.dir}\\javadoc\\${project.name}">
  			</fileset>  			
  		</copy>
	</target>
	
	<target name="clean">
		<delete dir="${build.dir}\javadoc\${project.name}" failonerror="false" quiet="true" />
	</target>
	
	
</project>