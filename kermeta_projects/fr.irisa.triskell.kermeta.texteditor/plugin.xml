<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="fr.irisa.triskell.kermeta.texteditor"
   name="Kermeta Text Editor"
   version="0.0.2"
   provider-name="fr.irisa.triskell"
   class="fr.irisa.triskell.kermeta.texteditor.TexteditorPlugin">

   <runtime>
      <library name="kermetaTextEditor.jar">
         <export name="*"/>
      </library>
      <library name="lib/thirdparty/antlr.jar">
         <export name="*"/>
      </library>
      <library name="lib/thirdparty/emfatic-core.jar">
         <export name="*"/>
      </library>
      <library name="lib/thirdparty/ldt-core.jar">
         <export name="*"/>
      </library>
      <library name="lib/io_kermeta.jar">
         <export name="*"/>
      </library>
      <library name="lib/model_kermeta.jar">
         <export name="*"/>
      </library>
      <library name="lib/thirdparty/log4j.jar">
         <export name="*"/>
      </library>
   </runtime>

   <requires>
     <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.jface.text"/>
      <import plugin="org.eclipse.ui.editors"/>
      <import plugin="org.eclipse.ui.workbench.texteditor"/>
      <import plugin="org.eclipse.ui.ide"/>
      <import plugin="org.eclipse.ui.views"/>
      <import plugin="org.eclipse.ui.intro"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.emf.ecore"/>
      <import plugin="org.eclipse.emf.ecore.xmi"/>
   </requires>
   
    <extension
   point="org.eclipse.ui.editors">
   <editor
      name="MCEditor"
      icon="src/java/fr/irisa/triskell/kermeta/texteditor/icons/kermeta.png"
      extensions="kmt"
      contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
      class="fr.irisa.triskell.kermeta.texteditor.editors.Editor"
      id="org.eclipse.ui.editors.text.texteditor">
   </editor>
   </extension>
   

</plugin>
