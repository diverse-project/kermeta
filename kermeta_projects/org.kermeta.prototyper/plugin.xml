<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.kermeta.prototyper.editor.PrototyperEditor"
            contributorClass="org.eclipse.emf.ecore.presentation.EcoreActionBarContributor$Reflective"
            extensions="xmi"
            icon="icons/kermeta.png"
            id="org.kermeta.prototyper.editor.PrototyperEditor"
            name="Kermeta Prototyper Editor (experimental)">
      </editor>
      <editor
            class="org.kermeta.prototyper.editor.KmtWithPrototyperEditor"
            contributorClass="org.eclipse.emf.ecore.presentation.EcoreActionBarContributor$Reflective"
            extensions="kmt"
            icon="icons/kermeta.png"
            id="org.kermeta.prototyper.editor.KmtWithPrototyperEditor"
            name="Kmt with Prototyper Editor (experimental)">
      </editor>
   </extension>


	<!-- begin - Property tab extensions -->
	<extension point="org.eclipse.ui.views.properties.tabbed.propertyContributor">
		<propertyContributor contributorId = "org.kermeta.prototyper.editor.properties.contributorID"
			labelProvider="org.kermeta.prototyper.editor.properties.providers.SectionsLabelProvider">
		<propertyCategory category = "prototyper"/>
		</propertyContributor>
	</extension>
	
	<extension point="org.eclipse.ui.views.properties.tabbed.propertyTabs">
		<propertyTabs contributorId="org.kermeta.prototyper.editor.properties.contributorID">
			<propertyTab
         category="prototyper"
         id="org.kermeta.prototyper.editor.properties.metamodel"
         image="icons/kermeta.png"
         indented="false"
         label="From metamodel"/>    
			<propertyTab
				afterTab="org.kermeta.prototyper.editor.properties.metamodel"
				category="prototyper"
				id="org.kermeta.prototyper.editor.properties.simulators"
				indented="false"
				label="From simulators"/>
		</propertyTabs>
	</extension>

	<extension point="org.eclipse.ui.views.properties.tabbed.propertySections">
		<propertySections contributorId="org.kermeta.prototyper.editor.properties.contributorID">
			<propertySection
				id="org.kermeta.prototyper.editor.properties.mettab.virtualtypemodeltypesection.metamodel"
				tab="org.kermeta.prototyper.editor.properties.metamodel"
				afterSection="org.kermeta.prototyper.editor.properties.mettab.virtualtypemodeltypesection.metamodel"
				class="org.kermeta.prototyper.editor.properties.sections.EObjectSection">
				<input type="org.eclipse.emf.ecore.EObject"/>
			</propertySection>
			<propertySection
				id="org.kermeta.prototyper.editor.properties.mettab.virtualtypemodeltypesection.simulators"
				tab="org.kermeta.prototyper.editor.properties.simulators"
				afterSection="org.kermeta.prototyper.editor.properties.mettab.virtualtypemodeltypesection.simulators"
				class="org.kermeta.prototyper.editor.properties.sections.EObjectSection">
				<input type="org.eclipse.emf.ecore.EObject"/>
			</propertySection>
		</propertySections>
	</extension>
	<!-- end - Property tab extensions -->
</plugin>
