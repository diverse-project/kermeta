<plugin
    name = "%pluginName"
    id = "fr.irisa.triskell.kermeta.model"
    version = "0.0.1"
    provider-name = "%providerName">

  <requires>
    <import plugin="org.eclipse.core.runtime" />
    <import plugin="org.eclipse.emf.ecore" export="true"/>
    <import plugin="org.eclipse.emf.ecore.xmi"/>
    <import plugin="org.eclipse.emf.common.ui"/>
    <import plugin="org.eclipse.emf.doc"/>
  </requires>

  <runtime>
     <library name="dist/model_kermeta.jar">
        <export name="*"/>
     </library>
  </runtime>

  <extension point="org.eclipse.emf.ecore.generated_package">
    <package 
       uri = "http://kermeta_behavior/kermeta.ecore" 
       class = "fr.irisa.triskell.kermeta.behavior.BehaviorPackage" />
  </extension>

  <extension point="org.eclipse.emf.ecore.generated_package">
    <package 
       uri = "http://kermeta_structure/kermeta.ecore" 
       class = "fr.irisa.triskell.kermeta.structure.StructurePackage" />
  </extension>

</plugin>

