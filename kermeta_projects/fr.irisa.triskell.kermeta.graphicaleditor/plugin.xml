<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
<extension point="org.eclipse.ui.editors">
      <editor
            class="fr.irisa.triskell.kermeta.graphicaleditor.editor.StructureEditor"
            icon="icons/Structure.png"
            default="true"
            name="Kermeta class diagram"
            id="fr.irisa.triskell.kermeta.graphicaleditor.editor.StructureEditor"
            contributorClass="fr.irisa.triskell.kermeta.graphicaleditor.actions.StructureEditorActionBarContributor"
            extensions="kmdi">
      </editor>
   </extension>
   
   <extension point="org.eclipse.ui.newWizards">
      <wizard
            category="KermetaWizard"
            class="fr.irisa.triskell.kermeta.graphicaleditor.wizards.NewStructureDiagrams"
            finalPerspective="kermetaPerspective"
            icon="icons/Structure.png"
            id="fr.irisa.triskell.kermeta.graphicaleditor.wizards.NewStructureDiagrams"
            name="New Kermeta class diagram"
            preferredPerspectives="org.eclipse.ui.resourcePerspective">
         <selection class="org.eclipse.core.resources.IResource"/>
      </wizard>
   </extension>
   
   <extension
         name="Kermeta metamodeler"
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension targetID="org.topcased.modeler.perspective">
         <newWizardShortcut id="fr.irisa.triskell.kermeta.graphicaleditor.wizards.NewStructureDiagrams"/>
      </perspectiveExtension>
   </extension>
   <extension
         name="Kermeta metamodeler"
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension targetID="kermetaPerspective">
         <newWizardShortcut id="fr.irisa.triskell.kermeta.graphicaleditor.wizards.NewStructureDiagrams"/>
      </perspectiveExtension>
   </extension>
   
   <extension point="org.eclipse.ui.preferencePages">
      <page
            category="org.topcased.modeler.preferences.ModelerPreferencePage"
            class="fr.irisa.triskell.kermeta.graphicaleditor.preferences.StructurePreferencePage"
            id="fr.irisa.triskell.kermeta.graphicaleditor.preferences.StructurePreferencePage"
            name="Structure"/>
   </extension>
   <extension point="org.topcased.modeler.templates">
      <template
            di="templates/diag/%name%.kmdi"
            model="templates/diag/%name%.km"
            name="Km - Kermeta class diagram"
            id="fr.irisa.triskell.kermeta.graphicaleditor.templates.diag"
            editorId="fr.irisa.triskell.kermeta.graphicaleditor.editor.StructureEditor"/>
   </extension>
   
   <extension point="org.topcased.modeler.diagrams">
      <diagram
            configuration="fr.irisa.triskell.kermeta.graphicaleditor.diag.StructureConfiguration"
            id="fr.irisa.triskell.kermeta.graphicaleditor"
            name="Kermeta class diagram">
         <enableFor class="fr.irisa.triskell.kermeta.language.structure.Package"/>
      </diagram>
	</extension>
   
   
	<extension point="org.eclipse.ui.views.properties.tabbed.propertySections">
    	<propertySections contributorId="org.topcased.modeler.editor.Modeler">
	    	<propertySection
	        	id="fr.irisa.triskell.kermeta.graphicaleditor.NameSection"
	        	class="fr.irisa.triskell.kermeta.graphicaleditor.editor.properties.sections.NamePropertySection"
	        	tab="org.topcased.modeler.modelTab">
	        <input type="fr.irisa.triskell.kermeta.language.structure.NamedElement"/>
			</propertySection>
		</propertySections>
	</extension>
</plugin>
