<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Kermeta"
            id="fr.irisa.triskell.kermeta.touchnavigator">
      </category>
      <view
            name="Kermeta TouchNavigator View"
            icon="icons/sample.gif"
            category="fr.irisa.triskell.kermeta.touchnavigator"
            class="fr.irisa.triskell.kermeta.touchnavigator.views.TouchView"
            id="fr.irisa.triskell.kermeta.touchnavigator.views.TouchView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="fr.irisa.triskell.kermeta.touchnavigator.views.TouchView">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
