@mainClass "comp_propertyBehavior_test001::Main"
@mainOperation "main"

@uri "http://comp_propertyBehavior_test001"
package comp_propertyBehavior_test001;

require kermeta

using kermeta
using kermeta::standard

class Main {
	/**
	 *
	 */
	operation main() : Void is do
		var b : B init B.new
		b.period := 50
		stdio.writeln(b.frequency.toString)
	end

}

