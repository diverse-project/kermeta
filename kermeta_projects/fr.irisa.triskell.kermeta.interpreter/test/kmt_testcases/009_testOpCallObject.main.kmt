@mainClass "testOpCallObject::MyObjectCreation"
@mainOperation "createMyObject"
package testOpCallObject;

require "../../../fr.irisa.triskell.kermeta.framework/src/kermeta/Standard.kmt"

// Creation of an object
class MyObject {

	attribut attr1 : kermeta::standard::Integer
	attribut attr2 : kermeta::standard::Boolean

	operation set_attr1(arg0 : kermeta::standard::Integer) : Void is do
	
		attr1 := arg0
	end
	
	operation set_attr2(arg0 : kermeta::standard::Boolean) : Void is do

		attr2 := arg0
	end

}

class MyObjectCreation {

	operation createMyObject() : MyObject is do
		var object : MyObject
		var bool   : kermeta::standard::Boolean
		var int    : kermeta::standard::Integer
		bool := true
		int  := 4
		object := MyObject.new
		object.set_attr1(int)
		object.set_attr2(bool)
		result := object.attr1
	end
}