@mainClass "testOpCallObject::MyCarCreation"
@mainOperation "createMyCar"
package testOpCallObject;

require kermeta

// Creation of an object
class Car {

	//composition association of wheels
	attribute wheels : set Wheel [0..4]
}

class Wheel {

	attribute name : kermeta::standard::String
}

class MyCarCreation inherits kermeta::kunit::Assert {

	operation createMyCar() : Void is do
		var FLw : Wheel
		var FRw : Wheel
		var BLw : Wheel
		var BRw : Wheel
		var Rw : Wheel
		var car : Car

		FLw := Wheel.new
		FRw := Wheel.new
		BLw := Wheel.new
		BRw := Wheel.new
		Rw := Wheel.new
		FLw.name :="FrontLeft"
		FRw.name :="FrontRight"
		BLw.name :="BackLeft"
		BRw.name :="BackRight"
		Rw.name :="Rescue"

		car.wheels.add(FRw)
		car.wheels.add(FLw)
		car.wheels.add(BRw)
		car.wheels.add(BLw)
		do //check the overflow of multiplicity upper bound
			car.wheels.add(Rw)
			assert(false)
			rescue (e : kermeta::exceptions::Exception)
       			assert(true)
       	end
		//car.
		do //check destruction of contained parts
			stdio.writeln(BLw.name)
			assert(false)
			rescue (e : kermeta::exceptions::Exception)
       			assert(true)
       	end
	end
}