class TestVariable inherits kermeta::kunit::Assert
{    
    // Main operation that embeds all the tests 
     operation main_operation() is do
     end
     
    /** Test the init of a String var */
     operation testop1() : kermeta::standard::String is do
     	var v : kermeta::standard::String init "hello"
     	if (v != "hello") then 
     		raise "error"
     	end
     	result := v
     end

     /** Test the init of a  */
    operation testop2() : kermeta::standard::Integer is do
    	var v : kermeta::standard::Integer init 1
    	if (v != 1) then 
    		raise "error"
    	end
     	result := v
     end
     
     /** A combined test.. assignment, init */
     operation testop3() : kermeta::standard::Integer is do
     	var v1 : kermeta::standard::Integer
     	v1 := 1
     	var v2 : kermeta::standard::Integer init v1
     	if (v2 != 1) then 
     		raise "error"
   		end
     	result := v2
     end

}
