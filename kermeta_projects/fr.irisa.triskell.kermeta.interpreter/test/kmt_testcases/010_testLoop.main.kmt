@mainClass "testLoop::TestLoop"
@mainOperation "operation1"

package testLoop;

require "../../../fr.irisa.triskell.kermeta.framework/src/kermeta/Standard.kmt"


// call an operation from another package 
class TestLoop inherits kermeta::kunit::Assert {

    operation operation1() : kermeta::standard::Integer is do
		var v1 : kermeta::standard::Integer init 2
		var v2 : kermeta::standard::Integer init 2
		
		from var i : kermeta::standard::Integer init 0
		until i == 2
		loop
			v1 := v1*v1 + v2
			i := i + 1
		end
		assert(v1==38)
        stdio.writeln(v1)
		result := v1
    end
}
