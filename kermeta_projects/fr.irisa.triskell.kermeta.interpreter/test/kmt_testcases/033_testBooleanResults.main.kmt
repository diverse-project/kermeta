class TestBooleanResults inherits kermeta::kunit::Assert
{    
    // Main operation that embeds all the tests 
     operation main_operation() is do
     end
     
    /** Test the != . Should return false */
     operation testop1() : kermeta::standard::Boolean is do
     	assert("hello" == "hello")
		result := ("hello"=="hello")
     end

     /** Test the identity . Should return false */
    operation testop2() : kermeta::standard::Boolean is do
		assert("hello" != "hullo")
		result := ("hello"=="hullo")
     end
    
    /** Test the equality between Integers */ 
    operation testop1i() : kermeta::standard::Boolean is do
		assert(534 != 234)
		result := (534 != 234)
     end
     
     /** Test the difference between Integers */
     operation testop2i() : kermeta::standard::Boolean is do
     	assert(534 == 534)
     	result := (534 == 534)
     end
     
     /** Test the identity, as a .equals, for Int */
     operation testop3i() : kermeta::standard::Boolean is do
     	assert(534.equals(534))
     end

}
