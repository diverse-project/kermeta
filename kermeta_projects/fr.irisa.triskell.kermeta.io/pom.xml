<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.kermeta</groupId>
	<artifactId>fr.irisa.triskell.kermeta.io</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>Kermeta - Kermeta IO</name>
	<build>
    	<testResources>
      		<testResource>
      			<!-- copy the test resources into a kind of workspace for simulating eclipse environment -->
				<targetPath>../../target/test-workspace/fr.irisa.triskell.kermeta.io/src/test/resources</targetPath>
        		<directory>src/test/resources</directory>
      		</testResource>
      		<testResource>
      			<!-- copy the test resources into a kind of workspace for simulating eclipse environment -->
				<targetPath>../../target/test-workspace/fr.irisa.triskell.kermeta.io/src/kermeta</targetPath>
        		<directory>src/kermeta</directory>
      		</testResource>
      		<testResource>
				<targetPath>../../target/test-classes</targetPath>
        		<directory>src/test/classes-resources</directory>
      		</testResource>
    	</testResources>
		<sourceDirectory>src/java</sourceDirectory>
		<outputDirectory>build/class</outputDirectory>
        <plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.0.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
      		<plugin>
        		<groupId>org.apache.maven.plugins</groupId>
        		<artifactId>maven-surefire-plugin</artifactId>
        		<!-- <version>2.5</version> -->
        		<configuration>
          			<includes>
            			<include>**/JunitTestSuite.java</include>
          			</includes>
        		</configuration>
      		</plugin>
    	</plugins>
	</build>
