
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>fr.irisa.triskell</groupId>
    <artifactId>kermeta.scala.framework</artifactId>
    <packaging>jar</packaging>
    <name>Kermeta :: Framework</name>
    <version>0.0.3</version>
    <repositories>
        <repository>
            <id>scala-tools.org</id>
            <name>Scala-tools Maven2 Repository</name>
            <url>http://scala-tools.org/repo-snapshots</url>
        </repository>
        <repository>
            <id>triskellPublic</id>
            <url>http://tipimouss.irisa.fr:8081/nexus/content/groups/public</url>
        </repository>
        <repository>
            <id>kermetaPublicSnapshot</id>
            <url>http://www.kermeta.org/maven2-snapshots</url>
        </repository>
        <repository>
            <id>kermetaPublicSnapshot</id>
            <url>http://www.kermeta.org/maven2</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>scala-tools.org</id>
            <name>Scala-tools Maven2 Repository</name>
            <url>http://scala-tools.org/repo-releases</url>
        </pluginRepository>
    </pluginRepositories>
    <description>Kermeta :: Framework</description>

    <build>
        <sourceDirectory>src</sourceDirectory>
        <!-- <testSourceDirectory>src/test/scala</testSourceDirectory> -->
        <plugins>

           <plugin>
                <groupId>org.scala-tools</groupId>
                <artifactId>maven-scala-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <scalaVersion>${scala.version}</scalaVersion>
                    <args>
                        <arg>-target:jvm-1.5</arg>
                        <arg>-make:transitivenocp</arg>
                        <arg>-dependencyfile</arg>
                        <arg>${project.build.directory}/.scala_dependencies</arg>
                    </args>
                    
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <version>2.0.1</version>
                <configuration>
                    <instructions>
                        <Export-Package>fr.irisa.triskell.kermeta.language.structureScalaAspect.*,kermeta.*</Export-Package>
                        <Import-Package>scala.collection, scala.collection.immutable, scala.collection.mutable,fr.irisa.triskell.kermeta.language.structure,fr.irisa.triskell.kermeta.language.behavior,org.osgi.framework, scala, scala.runtime,org.eclipse.emf.*</Import-Package>
                        <Bundle-ClassPath>.</Bundle-ClassPath>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>org.kermeta</groupId>
            <artifactId>kermeta.model</artifactId>
            <version>1.3.0</version>
        </dependency>
        <dependency>
            <groupId>org.eclipse</groupId>
            <artifactId>emf</artifactId>
            <version>3.5.0</version>
        </dependency>
        <dependency>
            <groupId>org.scala-lang</groupId>
            <artifactId>scala-library</artifactId>
            <version>2.8.0.RC1</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
    </dependencies>


    <distributionManagement>
		<!-- <snapshotRepository>
			<id>triskell-snapshot</id>
			<name>Triskell Snapshot</name>
			<url>http://tipimouss.irisa.fr:8081/nexus/content/repositories/triskell-snapshots/</url>
		</snapshotRepository> -->
        <repository>
            <id>tipimouss-local-maven-repository</id>
            <name>Tipimouss Local release repository</name>
            <url>file:/var/www/html/maven2</url>
        </repository>
        <snapshotRepository>
            <id>tipimouss-local-maven-repository</id>
            <name>Tipimouss Local  snapshot repository</name>
            <url>file:/var/www/html/maven2-snapshots</url>
        </snapshotRepository>
    </distributionManagement>
</project>