@mainClass "test::TestIntegerComparison"
@mainOperation "main"


package test;

require kermeta
using kermeta::kunit
using kermeta::standard

class TestIntegerComparison inherits TestCase
{
	operation main() : Void is do 
          //var runner : TestRunner init TestRunner.new()
          //runner.run(TestIntegerComparison)
          //runner.printTestResult()
          test_CompareVarAndNegativeInt
          test_CompareNegativeInts
   	end
   	
   	operation test_CompareVarAndNegativeInt() : Void is do
   		
   		// Compares a variable with value -1 to -1
   		var minusOne : Integer init -1
   		//assertFalse( minusOne != -1)
  		if ( minusOne != -1 )
  		then
	   		stdio.writeln("test_CompareVarAndNegativeInt  KO")
  		else
	   		stdio.writeln("test_CompareVarAndNegativeInt  OK")
  		end
   	end

	operation test_CompareNegativeInts() : Void is do
		
		// Compares -1 with -1
		//assertFalse( -1 != -1)
		if ( -1 != -1 )
		then
	   		stdio.writeln("test_CompareNegativeInts       KO")
		else
	   		stdio.writeln("test_CompareNegativeInts       OK")
		end
	end
   	
}