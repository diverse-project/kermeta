@mainClass "testLoop::TestLoop"
@mainOperation "testLoop1"

package testLoop;

require kermeta


// call an operation from another package 
class TestLoop  {

    operation testLoop1() : kermeta::standard::Integer is do
		var v1 : kermeta::standard::Integer init 2
		var v2 : kermeta::standard::Integer init 2
		
		from var i : kermeta::standard::Integer init 0
		until i == 2
		loop
			v1 := v1*v1 + v2
			i := i + 1
		end
		//assert(v1==38)
        stdio.writeln(v1.toString)
		result := v1
    end
}
