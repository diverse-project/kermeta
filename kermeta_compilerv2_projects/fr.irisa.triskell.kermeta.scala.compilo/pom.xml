      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>truezip-maven-plugin</artifactId>
        <version>1.0-beta-4</version>
        <executions>
          <execution>
            <id>remove-a-file</id>
            <phase>package</phase>
            <goals>
              <goal>remove</goal>
            </goals>
            <configuration>
              <fileset>
                <directory>target/${project.artifactId}-${project.version}.jar/META-INF</directory>
                <includes>
                  <include>**/*.RSA</include>
                  <include>**/*.SF</include>
