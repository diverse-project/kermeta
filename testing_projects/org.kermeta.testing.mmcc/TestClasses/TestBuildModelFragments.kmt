 *
 * This class implements several configurations for the creation of model fragments (according to a test criterion)
 * and the generation of the associated ModelCoverageChecker.
 *
 * To create a new configuration, it is necessary to call buildFragments on the builder.
 */

@mainClass "mmcc::TestBuildModelFragments"
@mainOperation "main"


package mmcc;


require kermeta
require "platform:/resource/org.kermeta.testing.mmcc/MMCC/BuildModelFragments.kmt"

class TestBuildModelFragments
{

	reference builder : BuildModelFragments

	/* Uncomment the particular test case you want to run and comment the others*/
	operation main() : Void is do 
		builder := BuildModelFragments.new
		testStatechartwAllPart
//		testStatechartwrongCriterion
//		testStatechartwAllRanges
//		testSimpleMMIntFeaturewAllPart
//		testClassModelwAllRanges
//		testClassModelwAllPart
	end
	
	/*Each test case is a particular configuration for the creation of a partition model with a specific
	source metamodel and test criterion and for the generation of the associated ModelCoverageChecker*/
	
	operation testStatechartwAllPart() : Void is do
		builder.buildFragments("platform:/resource/org.kermeta.testing.mmcc/TestData/statechart.ecore","AllPart")
	end
	
	operation testStatechartwrongCriterion() : Void is do
		builder.buildFragments("platform:/resource/org.kermeta.testing.mmcc/TestData/statechart.ecore","AllPartitions")
	end
		
	operation testStatechartwAllRanges() : Void is do
		builder.buildFragments("platform:/resource/org.kermeta.testing.mmcc/TestData/statechart.ecore","AllRanges")
	end
	
	operation testSimpleUMLwAllPart() : Void is do
		builder.buildFragments("platform:/resource/org.kermeta.testing.mmcc/TestData/simpleUML_MM.ecore","AllPart")
 	end
	
	operation testSimpleMMIntFeaturewAllPart() : Void is do
		builder.buildFragments("platform:/resource/org.kermeta.testing.mmcc/TestData/SimpleMMIntFeature.ecore","AllPart")
 	end
	
	operation testClassModelwAllRanges() : Void is do 
		builder.buildFragments("platform:/resource/org.kermeta.testing.mmcc/TestData/classModel.ecore","AllRanges")
	end

	operation testClassModelwAllPart() : Void is do 
		builder.buildFragments("platform:/resource/org.kermeta.testing.mmcc/TestData/classModel.ecore","AllPart")
	end
}