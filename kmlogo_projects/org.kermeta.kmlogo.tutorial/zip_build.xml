	</target>
	<target name="build_fr_irisa_triskell_kmlogo_model" >
		<tstamp>
			<format property="TODAY_UK" pattern="d-MMMM-yyyy" locale="en"/>
		</tstamp>
		<filter token="BUILD.DATE" value="${TODAY_UK}"/>
		<mkdir dir="mytemp"/>
		<copy todir="mytemp" failonerror="true" overwrite="true">
			<fileset dir="../fr.irisa.triskell.kmlogo.model" includes="**" excludes="*mytemp"/>
		</copy>
		<zip destfile="zips/fr.irisa.triskell.kmlogo.model.zip" basedir="mytemp" includes="**" filesonly="false" whenempty="skip" update="false"/>
		<delete dir="mytemp"/>
	</target>

