<project name="org.kermeta.kmlogo.tutorial" default="build_all_zips" basedir=".">
	<target name="build_all_zips" depends="build_fr_irisa_triskell_kmlogo_model, 
		build_fr_irisa_triskell_kmlogo_model_edit,  
		build_fr_irisa_triskell_kmlogo_model_editor, 
