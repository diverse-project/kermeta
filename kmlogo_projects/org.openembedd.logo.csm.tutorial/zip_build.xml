<project name="org.openembedd.logo.csm.tutorial" default="build_all_zips" basedir=".">
	<target name="build_all_zips" 
		depends="build_org_openembedd_logo_csm, 
		         build_org_openembedd_logo_csm_diagram_block,  
		         build_org_openembedd_logo_csm_edit,  
		         build_org_openembedd_logo_csm_editor, 
		         build_org_openembedd_logo_csm_modeler, 
		         build_org_openembedd_logo_csm_translator, 
		         build_org_openembedd_logo_csm_ui">
	</target>
	
	<target name="build_org_openembedd_logo_csm" >
			<tstamp>
			<format property="TODAY_UK" pattern="d-MMMM-yyyy" locale="en"/>
			</tstamp>
			<filter token="BUILD.DATE" value="${TODAY_UK}"/>
			<mkdir dir="mytemp"/>
			<copy todir="mytemp" failonerror="true" overwrite="true">
				<fileset dir="../org.openembedd.logo.csm" includes="**" excludes="*mytemp"/>
			</copy>
			<zip destfile="zip/org.openembedd.logo.csm.zip" basedir="mytemp" includes="**" filesonly="false" whenempty="skip" update="false"/>
			<delete dir="mytemp"/>
	</target>

