package Math;


require kermeta

using kermeta::standard
class Math
{
	operation sin(a : Real) : Real is do 
		result ?= extern fr::irisa::triskell::kmLogo::wrapper::Math.sin(a)
	end
	operation cos(a : Real) : Real is do 
		result ?= extern fr::irisa::triskell::kmLogo::wrapper::Math.cos(a)
	end
	operation pi() : Real is do
		result ?= extern fr::irisa::triskell::kmLogo::wrapper::Math.pi(self)
	end
	
	operation toDegrees(a : Real) : Real is do 
		result ?= extern fr::irisa::triskell::kmLogo::wrapper::Math.toDegrees(a)
	end
	operation toRadians(a : Real) : Real is do 
		result ?= extern fr::irisa::triskell::kmLogo::wrapper::Math.toRadians(a)
	end
}