package kmLogo::ASM

context Back 
inv positive_steps :
	steps >= 0

context Forward  
inv positive_steps :
	steps >= 0

context ProcCall 
inv same_number_of_formals_and_actuals :
	actualArgs->size = declaration.args.size
	
context ProcDeclaration 
inv unique_names_for_formal_arguments :
		args->forAll ( a1, a2 | a1.name = a2.name implies a1 = a2 )

endpackage
