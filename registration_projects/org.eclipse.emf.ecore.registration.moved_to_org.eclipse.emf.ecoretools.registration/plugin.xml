<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

	<extension point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="org.eclipse.emf.ecore.registration.epackagesregistration"
            nameFilter="*.ecore"
            objectClass="org.eclipse.core.resources.IFile">
         <menu
	         id="org.eclipse.emf.ecore.registration.epackagesregistration.subMenu"
	         label="EPackages registration"
	         path="additions">
      		<separator name="emfregistration"/>
		</menu>
        <action
              class="org.eclipse.emf.ecore.registration.popup.actions.EcoreRegisteringAction"
              enablesFor="*"
              icon="images/eclipse_ecore.gif"
              id="org.eclipse.emf.ecore.registration.EcoreRegister"
              label="Register EPackages into repository"
              menubarPath="org.eclipse.emf.ecore.registration.epackagesregistration.subMenu/emfregistration">
        </action>
       <action
               enablesFor="*"
               label="Unregister EPackages from repository"
               icon="images/eclipse_ecore.gif"
               menubarPath="org.eclipse.emf.ecore.registration.epackagesregistration.subMenu/emfregistration" 
               class="org.eclipse.emf.ecore.registration.popup.actions.EcoreUnregisteringAction"
               id="org.eclipse.emf.ecore.registration.EcoreUnregister"/>       
      </objectContribution>
	</extension>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="EPackages registration"
            id="org.eclipse.emf.ecore.registration.view">
      </category>
      <view
            allowMultiple="false"
            category="org.eclipse.emf.ecore.registration.view"
            class="org.eclipse.emf.ecore.registration.view.RegisteredPackageView"
            icon="images/RegisteredEPackage.gif"
            id="org.eclipse.emf.ecore.registration.viewregisteredpackages"
            name="EMF registered packages"/>
   </extension>
</plugin>
