@mainClass "oclTests::Main"
@mainOperation "main"


package oclTests;


require kermeta
require "BiteSizeOclTests.kmt" 
require "SnackSizeOclTests.kmt" 
require "StructuralOclTests.kmt"  
     
using kermeta::kunit

class Main
{
	operation main() : Void is 
	  do 
		    var testRunner : TestRunner init TestRunner.new
		    var suite : TestSuite init TestSuite.new.addAllTestCasesFrom(BiteSizeOclTests)
		    suite.addAllTestCasesFrom(StructuralOclTests)
		    suite.addAllTestCasesFrom(SnackSizeOclTests)
		    stdio.write(suite.tests.size.toString)
    		testRunner.runTest(suite)
            testRunner.printTestResult
  	  end
}