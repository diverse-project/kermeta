<project name="log4j_jar_unzipper" default="unzip_jar" basedir=".">
	<description>
       
	</description>
	<property name="dest" location="bin"/>
	<property name="jarfile" value="lib/thirdparty/log4j.jar"/>	
  	<target name="unzip_jar" description="unzip log4j.jar in order to use it in eclipse">
  		<unzip dest="${dest}"
  			src= "${jarfile}">
			<patternset>		    
		        <exclude name="**/MANIFEST.MF"/>
		    </patternset>
		</unzip>
  	</target> 
</project>
