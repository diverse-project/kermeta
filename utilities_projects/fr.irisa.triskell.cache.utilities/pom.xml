<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>fr.irisa.triskell.cache.utilities</groupId>
  <artifactId>fr.irisa.triskell.cache.utilities</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>Triskell - Cache Utilities</name>
	<repositories>
		<repository>
			<id>fr.irisa.triskell</id>
			<name>Nexus IRISA public</name>
			<url>http://tipimouss.irisa.fr:8081/nexus/content/groups/public/</url>
			<releases>
			</releases>
		</repository>
	</repositories>
	<dependencies>
	</dependencies>
	<build>
		<sourceDirectory>src/main/java</sourceDirectory>
		<plugins>

			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.0.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>2.0.1</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>
					<!-- <Include-Resource>resources</Include-Resource> -->
					<Bundle-Classpath>.</Bundle-Classpath>
					<Export-Package>fr.irisa.triskell.cache.utilities</Export-Package>
					<!-- <Bundle-Activator>org.entimid.ui.inf.Main</Bundle-Activator> -->
					<Import-Package>*</Import-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<distributionManagement>
		<snapshotRepository>
			<id>Triskell-snapshot</id>
			<name>Triskell Snapshot</name>
			<url>http://tipimouss.irisa.fr:8081/nexus/content/repositories/triskell-snapshots/</url>
		</snapshotRepository>
	</distributionManagement>
</project>