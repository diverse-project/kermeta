require "platform:/lookup/org.kermeta.language.scalacompiler.model/src/kmt/scalacompiler/ScalaCompilerContext.kmt"
require "platform:/resource/org.kermeta.language.scalacompiler.model/src/kmt/scalacompiler/kermeta/language/behavior/CallExpression.kmt"


using kermeta::standard
using kermeta::utils
using scalacompiler

aspect class CallVariable inherits CallExpression{
   /**
    * Generate Scala code
    */
   method generateScala(context : ScalaCompilerContext, res : kermeta::utils::StringBuffer)   is do
      res.append(context.protectScalaKeyword(self.name))
		if(self.parameters != void and self.parameters.size > 0) then
			res.append("(")
			context.generateScalaCodeEach(res,self.parameters,",",context)
			res.append(")")
		end
      
   end
}