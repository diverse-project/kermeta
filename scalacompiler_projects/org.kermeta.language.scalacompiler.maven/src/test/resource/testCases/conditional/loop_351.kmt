@mainClass "pkgLoop351::Loop351"
@mainOperation "main"


package pkgLoop351;


require kermeta
using kermeta::standard

class Loop351
{
	operation main() : Void is do 
		from var i : Integer init 0
		until i==6
		loop
			stdio.writeln("loop1++=" + i.toString())
			
			from var j : Integer init 0
			until j==4
			loop
				stdio.writeln("loop2++=" + j.toString())
				j := j+1
			end
			
			i := i+1
		end
		
		
		from var i : Integer init 0
		until i<12
		loop
			stdio.writeln("loop1++=" + i.toString())
			
			from var j : Integer init 0
			until j==4
			loop
				stdio.writeln("loop2++=" + j.toString())
				j := j+1
				i := i+1
			end
			
			i := i+1
		end
		
		
		from var i : Integer init 10
		until i>0
		loop
			stdio.writeln("loop1++=" + i.toString())
			
			from var j : Integer init 0
			until j==4
			loop
				stdio.writeln("loop2++=" + j.toString())
				j := j+1
				i := i-2
			end
			
			i := i+1
		end
	end
}