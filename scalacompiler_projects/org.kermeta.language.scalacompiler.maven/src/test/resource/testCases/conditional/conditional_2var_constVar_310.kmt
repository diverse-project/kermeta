@mainClass "p2::Conditional2VarConstVar"
@mainOperation "main"


package p2;


require kermeta
using kermeta::standard

class Conditional2VarConstVar
{
	operation main() : Void is do 
		var b : Boolean
		
		b:= true
		
		if(true and b) then
			stdio.writeln("trueAndb=True=success")
		else
			stdio.writeln("trueAndb=True=fail")
		end
		
		if(true.andThen{b | true}) then
			stdio.writeln("trueAndThenb=True=success")
		else
			stdio.writeln("trueAndThenb=True=fail")
		end
		
		b:= false
		
		if(true and b) then
			stdio.writeln("trueAndb=False=fail")
		else
			stdio.writeln("trueAndb=False=success")			
		end
		
		if(true.andThen{b | false}) then
			stdio.writeln("trueAndThenb=False=fail")
		else
			stdio.writeln("trueAndThenb=False=success")
		end
		
		if(false and b) then
			stdio.writeln("falseAndb=False=fail")
		else
			stdio.writeln("falseAndb=False=success")
		end
		
		if(false.andThen{b | false}) then
			stdio.writeln("falseAndThenb=False=fail")
		else
			stdio.writeln("falseAndThenb=False=success")
		end
		
		b:=true
		
		if(false and b) then
			stdio.writeln("falseAndb=True=fail")
		else
			stdio.writeln("falseAndb=True=success")
		end
		
		if(false.andThen{b | true}) then
			stdio.writeln("falseAndThenb=True=fail")
		else
			stdio.writeln("falseAndThenb=True=success")
		end
	end
}