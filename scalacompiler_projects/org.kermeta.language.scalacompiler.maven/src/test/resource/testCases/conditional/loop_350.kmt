@mainClass "pkgLoop::Loop"
@mainOperation "main"


package pkgLoop;


require kermeta
using kermeta::standard


class Loop
{
	operation main() : Void is do
	
		from var i : Integer init 0
		until i==10
		loop
			stdio.writeln("loop++=" + i.toString())
			i := i+1
		end
		
		
		from var i : Integer init 10
		until i==0
		loop
			stdio.writeln("loop--=" + i.toString())
			i := i-1
		end
		
		
		from var i : Integer init -4
		until i==12
		loop
			stdio.writeln("loop++fromNeg=" + i.toString())
			i := i+1
		end
		
		
		from var i : Integer init 3
		until i==-7
		loop
			stdio.writeln("loop--toNeg=" + i.toString())
			i := i-1
		end
		
		var j : Integer
		j := 1
		
		from var i : Boolean init false
		until i==true
		loop
			j := j + 1
			
			if(j==5) then
				i := true
			end
			stdio.writeln("loop,boolToTrue=" + i.toString())
		end
		
		j := 1
		
		from var i : Boolean init true
		until i==false
		loop
			j := j + 1
			
			if(j==5) then
				i := false
			end
			stdio.writeln("loop,boolToFalse=" + i.toString())
		end
	end
}

