<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>fr.irisa.triskell	</groupId>
	<artifactId>osgi.utilities</artifactId>
	<packaging>bundle</packaging>
	<name>Triskell - OSGi Utilities</name>
	<version>1.0.0-SNAPSHOT</version>
	<repositories>
		<repository>
			<id>fr.irisa.triskell</id>
			<name>Nexus IRISA public</name>
			<url>http://tipimouss.irisa.fr:8081/nexus/content/groups/public/</url>
			<releases>
			</releases>
		</repository>
	</repositories>
	<dependencies>
		<dependency>
			<groupId>org.osgi</groupId>
			<artifactId>org.osgi.core</artifactId>
			<version>4.2.0</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
	</dependencies>
	<build>
		<sourceDirectory>src</sourceDirectory>
		<plugins>

			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.0.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>2.0.1</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>
					<!-- <Include-Resource>resources</Include-Resource> -->
					<Bundle-Classpath>.</Bundle-Classpath>
					<Export-Package>fr.irisa.triskell.osgi.utilities</Export-Package>
					<!-- <Bundle-Activator>org.entimid.ui.inf.Main</Bundle-Activator> -->
					<Import-Package>*</Import-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<distributionManagement>
		<snapshotRepository>
			<id>diva-snapshot</id>
			<name>Diva Snapshot</name>
			<url>http://tipimouss.irisa.fr:8081/nexus/content/repositories/diva-snapshots/</url>
		</snapshotRepository>
	</distributionManagement>
</project>