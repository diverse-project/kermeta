@mainClass "testBidon::TestBidon"
@mainOperation "main"


package testBidon;


require kermeta

using kermeta::standard

class TestBidon inherits kermeta::kunit::TestCase
{
    operation main() : Void is do
//    	stdio.writeln("Why such a 'main()' method ???")
//    	var i : Integer init 0
    end
    
    method setUp() : Void is do
        stdio.writeln("The setUp() has been executed")
    end
    
    operation testKermetaOK() is do
    	stdio.writeln("DEBUG - The testKermetaOK() is executed")
    	var i : Integer init 0
    	assertTrueWithMsg( i == 0, "example of KUnit succeeded true assertion") 
    end
    
    operation testKermetaFailure() is do
    	stdio.writeln("DEBUG - The testKermetaFailure() is executed")
    	var i : Integer init 5
    	assertTrueWithMsg( i == 0, "example of KUnit failed true assertion") 
    end
    
    operation testKermetaError() is do
    	stdio.writeln("DEBUG - The testKermetaError() is executed")
    	var i : Integer
    	i := 5/0
    	assertTrueWithMsg( i == 0, "example of KUnit failed true assertion") 
    end
    
    method tearDown() : Void is do
        stdio.writeln("The tearDown() has been executed")
    end
}