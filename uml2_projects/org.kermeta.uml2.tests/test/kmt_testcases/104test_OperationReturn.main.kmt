package uml2_tests;

require kermeta
require "ClassDiagram.kmt"

using kermeta::standard
using ClassDiagram

class OperationReturnTestCase inherits kermeta::kunit::TestCase
{
	attribute bClass : BClass
	attribute gClass : ExternClassDiagram::GClass
	
	method setUp() is do
    	bClass := BClass.new
	end
	
	method tearDown() is do
		// We don't need to tearDown anything in this test case.
	end
    
    // test if the bOperation of the BClass returns a GClass
    operation testOperationReturn() is do
    	gClass := bClass.bOperation()
//    	assertTrueWithMsg(false, "an operation return value can't be tested on a model !!!")
    	assertTrueWithMsg(ExternClassDiagram::GClass.isInstance(gClass),
    		"The bOperation of the BClass must return a GClass")
    end
}