<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
    <groupId>org.kermeta.utils</groupId>
	<artifactId>utils.systemservices.eclipse</artifactId>
    <version>2.0.1-SNAPSHOT</version>
	<packaging>jar</packaging>
	<name>utils.systemservices.eclipse</name>
	
	<properties>
        <kermeta.version>2.0.1-SNAPSHOT</kermeta.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <emf.version>2.6.0</emf.version>
        <scala.version>2.8.1</scala.version>
        <slf4j.version>1.6.1</slf4j.version>
        <slf4j.version.range>[1.5,2)</slf4j.version.range>
        <bundle.vendor>IRISA/INRIA</bundle.vendor>
    </properties>
	
	<description>This component provides an eclipse implementation for abstracting system services such as logging, progession reporting, cancellation, reporting result with error
that are useful for any program manipulating models.</description>
	<build>
		<sourceDirectory>src/main/java</sourceDirectory>
		
		<plugins>
			<!-- Java compiler plugin -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.0.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                    <encoding>${project.build.sourceEncoding}</encoding>
                </configuration>
            </plugin>
            <plugin>
            	<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>

				<version>2.3.1</version>
				<configuration>
					<archive>
						<manifestEntries>
							<Bundle-SymbolicName>org.kermeta.${project.artifactId}; singleton=true</Bundle-SymbolicName>
							<Bundle-Name>${project.name}</Bundle-Name>
							<Bundle-Vendor>${bundle.vendor}</Bundle-Vendor>
							<Bundle-ClassPath>.</Bundle-ClassPath>
							<Bundle-Activator>org.kermeta.utils.systemservices.eclipse.Activator</Bundle-Activator>
							<Bundle-Localization>plugin</Bundle-Localization>
							<Bundle-ActivationPolicy>lazy</Bundle-ActivationPolicy>
							<Export-Package>								
                        org.kermeta.utils.systemservices.eclipse,
                        org.kermeta.utils.systemservices.eclipse.api
                        	</Export-Package>
							<Require-Bundle>
					org.kermeta.utils.systemservices.api,
					org.eclipse.core.resources,
					org.eclipse.core.runtime,
					org.eclipse.ui.workbench
                        	</Require-Bundle>
							<Import-Package>
                    org.eclipse.emf.ecore,
					org.eclipse.emf.ecore.impl,
					org.eclipse.emf.ecore.resource,
					org.eclipse.emf.ecore.util,
					org.eclipse.emf.ecore.xmi,
					org.eclipse.emf.ecore.xmi.impl
                        </Import-Package>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>			
		</plugins>
	</build>
	<dependencies>
		<!-- Main dependencies -->
		
		<dependency>
			<groupId>org.osgi</groupId>
			<artifactId>org.osgi.core</artifactId>
			<version>4.2.0</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.emf</groupId>
			<artifactId>emf.lib</artifactId>
			<version>${emf.version}</version>
		</dependency>
		
		
		<dependency>
			<groupId>org.kermeta.utils</groupId>
			<artifactId>utils.systemservices.api</artifactId>
			<version>${kermeta.version}</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.core.resources</artifactId>
			<version>[3.5.2.0,)</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.core.runtime</artifactId>
			<version>[3.5.0.0,)</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.equinox.common</artifactId>
			<version>[3.5.1.0,)</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.equinox.registry</artifactId>
			<version>[3.4.0.0,)</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.core.jobs</artifactId>
			<version>[3.4.0.0,)</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.ui.workbench</artifactId>
			<version>[3.5.0.0,)</version>
		</dependency>
	</dependencies>
	<distributionManagement>
        <repository>
            <id>kermeta-public-release</id>
            <name>Kermeta public release repository on maven.irisa.fr</name>
            <url>http://maven.irisa.fr/artifactory/kermeta-public-release</url>
            <uniqueVersion>false</uniqueVersion>
        </repository>
        <snapshotRepository>
            <id>kermeta-public-snapshot</id>
            <name>Kermeta public snapshot repository on maven.irisa.fr</name>
            <url>http://maven.irisa.fr/artifactory/kermeta-public-snapshot</url>
            <uniqueVersion>false</uniqueVersion>
        </snapshotRepository>
    </distributionManagement>
</project>