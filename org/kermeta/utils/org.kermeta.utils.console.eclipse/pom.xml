<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.kermeta.utils</groupId>
	<artifactId>utils.console.eclipse</artifactId>
	<packaging>bundle</packaging>
	<name>utils.console.eclipse :: console bundle for Kermeta or any other need</name>
	
	<parent>
        <groupId>org.kermeta.utils</groupId>
        <artifactId>utils.artcomponent.root</artifactId>
        <version>2.0.1-SNAPSHOT</version>
    </parent>
	
	<build>
		<sourceDirectory>src/main/java</sourceDirectory>
		<resources>
			<resource>
				<directory>target/generated-sources/art2</directory>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.0.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.1.0</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Export-Package>
                        org.kermeta.utils.logger.eclipse.*
                        </Export-Package>
                        <!-- Use Require-Bundle dependencies only for bundles for we don't have control and that may introduce splitted package issue ex: org.eclipse.core.runtime -->
                        <Require-Bundle>
                        	org.eclipse.jface.text,
                    		org.eclipse.ui,
                    		org.eclipse.ui.console,
 							org.eclipse.core.runtime,
 							org.eclipse.core.jobs,
 							org.eclipse.equinox.preferences
                        </Require-Bundle>
                        <Import-Package>
                        	!org.eclipse.core.*,
							!org.eclipse.ui.*,
							!org.eclipse.jface.*,
							!org.eclipse.swt.*,
	                        org.kermeta.art2.*,
	                        !org.eclipse.equinox.preferences,
							org.osgi.framework;version="[1.5,2)",						
							org.kermeta.language.api.*,
							scala.*
                        </Import-Package>
                        <Bundle-ClassPath>.</Bundle-ClassPath>
                        <_versionpolicy>[${version;==;${@}},${version;+;${@}})</_versionpolicy>
                        <Bundle-Vendor>${bundle.vendor}</Bundle-Vendor>
                        <Bundle-SymbolicName>org.kermeta.utils.logger.eclipse; singleton:=true</Bundle-SymbolicName>
                    </instructions>
                </configuration>
            </plugin>
		</plugins>
	</build>
	<dependencies>
		<!-- Main dependencies -->
		<dependency>
			<groupId>org.osgi</groupId>
			<artifactId>org.osgi.core</artifactId>
			<version>4.2.0</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.kermeta.art2</groupId>
			<artifactId>art2.framework</artifactId>
			<version>${art2.version}</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.kermeta.language</groupId>
			<artifactId>language.api</artifactId>
			<version>${kermeta.version}</version>
			<!--<type>bundle</type>-->
			<scope>compile</scope>
		</dependency>
		
		<!-- Eclipse dependencies -->
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.core.jobs</artifactId>
			<version>[3.4.0.0,)</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.core.runtime</artifactId>
			<version>[3.5.0.0,)</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.equinox.common</artifactId>
			<version>[3.2.0.0,)</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.equinox.preferences</artifactId>
			<version>[3.2.0.0,)</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.jface</artifactId>
			<version>[3.5.0.0,)</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.jface.text</artifactId>
			<version>[3.5.0.0,)</version>
		</dependency>
        <dependency>
            <groupId>org.kermeta.eclipse</groupId>
            <artifactId>org.eclipse.swt</artifactId>
            <version>[3.5.0.0,)</version>
        </dependency>
        <dependency>
            <groupId>org.kermeta.eclipse</groupId>
            <artifactId>org.eclipse.swt.gtk.linux.x86_64</artifactId>
            <version>[3.5.0.0,)</version>
        </dependency>
        <dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.ui.console</artifactId>
			<version>[3.4.0.0,)</version>
		</dependency>
		
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.ui.workbench</artifactId>
			<version>[3.5.0.0,)</version>
		</dependency>
	</dependencies>

</project>