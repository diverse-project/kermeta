<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<artifactId>traceability.model</artifactId>
	<packaging>bundle</packaging>
	<name>Traceability model</name>
	
	<parent>
        <groupId>org.kermeta.traceability</groupId>
        <artifactId>traceability.root</artifactId>
        <version>2.0.4</version>
    </parent>
	
	<build>
		<sourceDirectory>src</sourceDirectory>
		
		<resources>
			<resource>
				<directory>.</directory>
				<includes>
					<include>plugin.xml</include>
					<include>plugin.properties</include>
				</includes>
			</resource>
			<resource>
				<directory>model</directory>
				<targetPath>model</targetPath>
			</resource>
		</resources>
		
		
		<plugins>
			<!-- plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.0.4</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin-->
			<plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.3.7</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                       <Export-Package>
                        	org.util,
                        	org.impl,
                        	org,
                        	org.kermeta.util,
                        	org.kermeta.impl,
                        	org.kermeta,
                        	org.kermeta.traceability.util,
                        	org.kermeta.traceability.impl,
                        	org.kermeta.traceability
                        </Export-Package>
                        <Import-Package>
							org.eclipse.emf.*,
							org.osgi.framework;version="[1.5,2)"
                        </Import-Package>
                        <Bundle-ClassPath>.</Bundle-ClassPath>
                        <Bundle-SymbolicName>org.kermeta.traceability.model; singleton=true</Bundle-SymbolicName>
                        <Bundle-ManifestVersion>2</Bundle-ManifestVersion>						
						<Bundle-Vendor>${bundle.vendor}</Bundle-Vendor>
						<Bundle-Version>${bundle.version}</Bundle-Version>
                    </instructions>
                </configuration>
            </plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.kermeta.emf</groupId>
    		<artifactId>emf.lib</artifactId>
			<version>${emf.version}</version>
		</dependency>
	</dependencies>
</project>