<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.kermeta.traceability</groupId>
    <artifactId>traceability_projects</artifactId>
    <version>2.0.1</version>
    <packaging>pom</packaging>
    <name>Traceability :: Projects</name>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
				<!-- version 2.0 doesn't work correctly with version range, need to wait the fix  -->
                
                <configuration>
				<!--   <allowTimestampedSnapshots>true</allowTimestampedSnapshots> --> 
                    <autoVersionSubmodules>true</autoVersionSubmodules>
                </configuration>
            </plugin>
        </plugins>
    </build>
	
	
    <modules>
        <module>org.kermeta.traceability.root</module>
        <module>org.kermeta.traceability.model</module>
    </modules>

	
    <scm>
        <connection>scm:svn:http://scm.gforge.inria.fr/svn/kermeta/trunk/org/kermeta/traceability</connection>
        <developerConnection>scm:svn:https://scm.gforge.inria.fr/svn/kermeta/trunk/org/kermeta/traceability</developerConnection>
        <url>http://gforge.inria.fr/scm/viewvc.php/trunk/org/kermeta/traceability?root=kermeta</url>
    </scm>
	
    <repositories>
        <repository>
            <id>kermeta Public</id>
            <url>http://www.kermeta.org/maven2</url>
        </repository>
        <repository>
            <id>kermeta PublicSnapShots</id>
            <url>http://www.kermeta.org/maven2-snapshots</url>
        </repository>
    </repositories>
    <distributionManagement>
        <repository>
            <id>tipimouss-local-maven-repository</id>
            <name>Tipimouss Local release repository</name>
            <url>file:/var/www/html/maven2</url>
            <uniqueVersion>false</uniqueVersion>
        </repository>
        <snapshotRepository>
            <id>tipimouss-local-maven-snapshot-repository</id>
            <name>Tipimouss Local  snapshot repository</name>
            <url>file:/var/www/html/maven2-snapshots</url>
            <uniqueVersion>false</uniqueVersion>
        </snapshotRepository>
    </distributionManagement>
</project>
