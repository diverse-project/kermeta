<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<artifactId>traceability.mdk</artifactId>
	<packaging>bundle</packaging>
	<name>Traceability model development kit</name>
	
	<parent>
        <groupId>org.kermeta.traceability</groupId>
        <artifactId>traceability.root</artifactId>
        <version>2.0.2-SNAPSHOT</version>
    </parent>
	
	<build>
		<sourceDirectory>src</sourceDirectory>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.0.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			 <plugin>
                <groupId>org.kermeta.language</groupId>
                <artifactId>language.compiler.mavenplugin</artifactId>
                <version>1.4.1-BETA8</version>
                <extensions>true</extensions>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <model>src/generated/km/MetaModel_org.kermeta.traceability.model.km</model>
                            <targetGroupId>${project.groupId}</targetGroupId>
                            <targetArtifactId>${project.artifactId}</targetArtifactId>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
			<plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.0.0</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Export-Package>
                        	org.kermeta.traceability.util,
                        	org.kermeta.traceability.impl,
                        	org.kermeta.traceability
                        </Export-Package>
                        <Import-Package>
							org.eclipse.emf.*,
							org.osgi.framework;version="[1.5,2)"
                        </Import-Package>
                        <Bundle-ClassPath>.</Bundle-ClassPath>
                        <Bundle-SymbolicName>org.kermeta.traceability.model</Bundle-SymbolicName>
                    </instructions>
                </configuration>
            </plugin>
             <!-- Add generated source to build cycle -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>1.5</version>
                <executions>
                    <execution>
                        <id>add-source</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>${project.build.directory}/generated-sources/kermeta</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.kermeta.emf</groupId>
    		<artifactId>emf.lib</artifactId>
			<version>${emf.version}</version>
		</dependency><dependency>
			<groupId>org.kermeta.traceability</groupId>
    		<artifactId>traceability.model</artifactId>
			<version>2.0.2-SNAPSHOT</version>
		</dependency>
	</dependencies>
</project>