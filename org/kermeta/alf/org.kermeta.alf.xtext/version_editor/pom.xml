<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.kermeta.alf</groupId>
  <artifactId>alf.xtext</artifactId>
  <name>alf editor :: alf Editor for Kermeta 2</name>
  <packaging>jar</packaging>

  <parent>
    <groupId>org.kermeta.alf</groupId>
    <artifactId>alf.editor.multimodule</artifactId>
    <version>2.0.1-SNAPSHOT</version>
  </parent>

  <build>
    <!--
      Manage mutli-source java project. Copy the src files inside the
      targetPath, the unique location for maven compiling Drawback : once
      compiled the sources are not visible as java packages
    -->
    <sourceDirectory>../src</sourceDirectory>
    <resources>
			<resource>
				<directory>..</directory>
				<includes>
					<include>plugin.properties</include>
					<include>plugin.xml</include>
				</includes>
			</resource>
			<resource>
				<directory>../icons</directory>
				<targetPath>icons</targetPath>
			</resource>
			<resource>
				<directory>../css</directory>
				<targetPath>css</targetPath>
			</resource>
		</resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.0.2</version>
        <configuration>
          <argLine>-Xmx1024m</argLine>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
      <!-- Add generated source to build cycle -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <version>1.7</version>
        <executions>
          <execution>
            <id>add-source</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>../src-gen</source>
              	<source>../xtend-gen</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
		        <artifactId>maven-jar-plugin</artifactId>
				<version>2.3.1</version>
				<configuration>
		          <archive>
		            <manifestEntries>
						<Bundle-SymbolicName>org.kermeta.${project.artifactId};singleton:=true</Bundle-SymbolicName>
						<Bundle-Name>org.kermeta.${project.artifactId}</Bundle-Name>
						<Bundle-Vendor>${bundle.vendor}</Bundle-Vendor>
						<Bundle-Version>${bundle.version}</Bundle-Version>
						<Manifest-Version>1.0</Manifest-Version>
						<Bundle-ActivationPolicy>lazy</Bundle-ActivationPolicy>
						<Bundle-Localization>plugin</Bundle-Localization>
						<Bundle-ManifestVersion>2</Bundle-ManifestVersion>						
						<Bundle-ClassPath>.</Bundle-ClassPath>
						<Export-Package>
			              org.kermeta.alf.xtext,
							 org.kermeta.alf.xtext.services,
							 org.kermeta.alf.xtext.alf,
							 org.kermeta.alf.xtext.alf.impl,
							 org.kermeta.alf.xtext.alf.util,
							 org.kermeta.alf.xtext.serializer,
							 org.kermeta.alf.xtext.parser.antlr,
							 org.kermeta.alf.xtext.parser.antlr.internal,
							 org.kermeta.alf.xtext.validation,
							 org.kermeta.alf.xtext.scoping,
							 org.kermeta.alf.xtext.generator,
							 org.kermeta.alf.xtext.formatting
			            </Export-Package>
						<Require-Bundle>
							org.eclipse.xtext;bundle-version="2.1.0";visibility:=reexport,
				 org.eclipse.xtext.xbase;bundle-version="2.1.0";resolution:=optional;visibility:=reexport,
				 org.apache.log4j;bundle-version="1.2.15";visibility:=reexport,
				 org.apache.commons.logging;bundle-version="1.0.4";resolution:=optional;visibility:=reexport,
				 org.eclipse.xtext.generator;resolution:=optional,
				 org.eclipse.emf.codegen.ecore;resolution:=optional,
				 org.eclipse.emf.mwe.utils;resolution:=optional,
				 org.eclipse.emf.mwe2.launch;resolution:=optional,
				 org.eclipse.xtext.util,
				 org.eclipse.emf.ecore,
				 org.eclipse.emf.common,
				 org.antlr.runtime,
				 org.eclipse.xtext.common.types
                        </Require-Bundle>
                        <Import-Packages>
                        	org.apache.log4j,
				 org.apache.commons.logging,
				 org.eclipse.xtext.xbase.lib,
				 org.eclipse.xtend2.lib
                        </Import-Packages>
		            </manifestEntries>		            
		          </archive>
		        </configuration>
			</plugin>
      
    </plugins>
  </build>
