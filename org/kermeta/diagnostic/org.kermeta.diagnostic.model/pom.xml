<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  	<modelVersion>4.0.0</modelVersion>
	<packaging>bundle</packaging>
	<name>Kermeta :: Diagnostic model</name>
	<groupId>org.kermeta.diagnostic</groupId>
  	<artifactId>diagnostic.model</artifactId>
	<version>2.0.1-SNAPSHOT</version>

    <properties>
        <kermeta.version>2.0.1-SNAPSHOT</kermeta.version><project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <art2.version>2.2.1-beta2</art2.version>
        <language.version>2.0.1-SNAPSHOT</language.version>
        <emf.version>2.7.0</emf.version>
        <scala.version>2.8.1</scala.version>
        <osgi.version>4.2.0</osgi.version>
        <utils.version>2.0.1-SNAPSHOT</utils.version>
        <traceability.version>2.0.2-BETA1</traceability.version>
        <kp.version>2.0.1-SNAPSHOT</kp.version>
        <slf4j.version>1.6.1</slf4j.version>
        <slf4j.version.range>[1.5,2)</slf4j.version.range>
        <bundle.vendor>IRISA/INRIA</bundle.vendor>
    </properties>

    <!--parent>
        <artifactId>language.root</artifactId>
        <groupId>org.kermeta.language</groupId>
        <version>2.0.1-SNAPSHOT</version>
    </parent-->	
	
	<build>

		<sourceDirectory>src/main/java</sourceDirectory>
		<resources>
			<resource>
				<directory>.</directory>
				<includes>
					<include>plugin.xml</include>
					<include>plugin.properties</include>
				</includes>
			</resource>
			<resource>
				<directory>model</directory>
				<targetPath>model</targetPath>
			</resource>
		</resources>

		<plugins>

		
			<!--plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.0.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin-->
			<plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.3.5</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>org.kermeta.diagnostic.model;singleton:=true</Bundle-SymbolicName>
                        <Bundle-Name>${project.name}</Bundle-Name>
                        <Bundle-Vendor>${bundle.vendor}</Bundle-Vendor>
                        <Bundle-ClassPath>.</Bundle-ClassPath>
                        <Bundle-ManifestVersion>2</Bundle-ManifestVersion>
                        <Bundle-Version>${bundle.version}</Bundle-Version>
                        <Export-Package>
                        	org,
                        	org.kermeta,
                        	org.kermeta.diagnostic,
                        	org.kermeta.diagnostic.util,
                        	org.kermeta.diagnostic.impl,
                        	org.kermeta.diagnostic
                        </Export-Package>
                        <Import-Package>
							org.eclipse.emf.*,
							org.osgi.framework;version="[1.5,2)"
                        </Import-Package>
                       
                    </instructions>
                </configuration>
            </plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>org.kermeta.emf</groupId>
    		<artifactId>emf.lib</artifactId>
			<version>${emf.version}</version>
		</dependency>
	</dependencies>
	
	
    <distributionManagement>
        <repository>
            <id>kermeta-public-release</id>
            <name>Kermeta public release repository on maven.irisa.fr</name>
            <url>http://maven.irisa.fr/artifactory/kermeta-public-release</url>
            <uniqueVersion>false</uniqueVersion>
        </repository>
        <snapshotRepository>
            <id>kermeta-public-snapshot</id>
            <name>Kermeta public snapshot repository on maven.irisa.fr</name>
            <url>http://maven.irisa.fr/artifactory/kermeta-public-snapshot</url>
            <uniqueVersion>false</uniqueVersion>
        </snapshotRepository>
    </distributionManagement>
	
</project>