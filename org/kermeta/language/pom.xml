<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.kermeta.language</groupId>
    <artifactId>kermetaV2_projects</artifactId>
    <version>2.0.1-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>KermetaV2 :: Projects</name>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
				<!-- version 2.0 doesn't work correctly with version range, need to wait the fix  -->
                
                <configuration>
				<!--   <allowTimestampedSnapshots>true</allowTimestampedSnapshots> --> 
                    <autoVersionSubmodules>true</autoVersionSubmodules>
                </configuration>
            </plugin>
        </plugins>
    </build>
	
	
    <modules>
    	<!-- Reusable parent pom -->
        <module>org.kermeta.language.root</module>
        <module>org.kermeta.language.artcomponent.root</module>
        
        <!-- jar | ie. inherits from org.kermeta.language.root -->
        <module>org.kermeta.language.api</module>
        <module>org.kermeta.language.api.tests</module>
        <module>org.kermeta.language.model</module>                         
        <!--<module>org.kermeta.language.model.edit</module>
        <module>org.kermeta.language.model.editor</module> -->
        <module>org.kermeta.language.workbench.eclipse</module>
                
        <!-- Art2 components -->
        <!-- <module>org.kermeta.language.checker</module> -->  
        <module>org.kermeta.language.eventmonitor.eclipse.builder</module> 
        <module>org.kermeta.language.KWF</module> 
        <module>org.kermeta.language.loader.scalaKMT</module>
        <module>org.kermeta.language.merger.binarymerger</module>
        <module>org.kermeta.language.merger.multimerger</module>   
        <module>org.kermeta.language.resolvere</module> 
        <module>org.kermeta.language.texteditor.eclipse</module>   
        <module>org.kermeta.language.ui.eclipse</module>      
        
        <!-- Archetype -->
    </modules>

	
    <scm>
        <connection>scm:svn:http://scm.gforge.inria.fr/svn/kermeta/trunk/org/kermeta/language</connection>
        <developerConnection>scm:svn:https://scm.gforge.inria.fr/svn/kermeta/trunk/org/kermeta/language</developerConnection>
        <url>http://gforge.inria.fr/scm/viewvc.php/trunk/org/kermeta/language?root=kermeta</url>
    </scm>
	
    <repositories>
        <repository>
            <id>kermeta Public</id>
            <url>http://www.kermeta.org/maven2</url>
        </repository>
        <repository>
            <id>kermeta PublicSnapShots</id>
            <url>http://www.kermeta.org/maven2-snapshots</url>
        </repository>
    </repositories>
    <distributionManagement>
        <repository>
            <id>tipimouss-local-maven-repository</id>
            <name>Tipimouss Local release repository</name>
            <url>file:/var/www/html/maven2</url>
            <uniqueVersion>false</uniqueVersion>
        </repository>
        <snapshotRepository>
            <id>tipimouss-local-maven-snapshot-repository</id>
            <name>Tipimouss Local  snapshot repository</name>
            <url>file:/var/www/html/maven2-snapshots</url>
            <uniqueVersion>false</uniqueVersion>
        </snapshotRepository>
    </distributionManagement>
</project>
