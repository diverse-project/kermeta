<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  	<modelVersion>4.0.0</modelVersion>
  	<packaging>jar</packaging>
  	<name>language.umlprofile2ecore :: Uml Profile to Ecore</name>
  	<artifactId>language.umlprofile2ecore</artifactId>

    <parent>
        <artifactId>language.root</artifactId>
        <groupId>org.kermeta.language</groupId>
        <version>2.0.3-SNAPSHOT</version>
    </parent>
    
    <dependencies>
		<dependency>
			<groupId>${project.parent.groupId}</groupId>
			<artifactId>language.model</artifactId>
			<version>${kermeta.version}</version>
		</dependency>
		
		<dependency>
			<groupId>${project.parent.groupId}</groupId>
			<artifactId>language.umlprofile2ecore.api</artifactId>
			<version>${kermeta.version}</version>
		</dependency>

    	<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.uml2.uml</artifactId>
			<version>[3.1.0,)</version>
		</dependency>
		<dependency>
		
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.uml2.common</artifactId>
			<version>[1.5.0,)</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.utils</groupId>
			<artifactId>utils.systemservices.api</artifactId>
			<version>${kermeta.version}</version>
		</dependency>
		
		<dependency>
			<groupId>org.kermeta.emf</groupId>
			<artifactId>emf.lib.patched</artifactId>
			<version>${emf.version}</version>
			<type>jar</type>
		</dependency>
		
				<dependency>
			<groupId>fr.irisa.triskell.kermeta</groupId>
			<artifactId>kermeta.model</artifactId>
			<version>${kermeta.model.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>org.kermeta.eclipse</groupId>
					<artifactId>org.eclipse.core.runtime</artifactId>
                </exclusion>
            </exclusions>
		</dependency>
		
    </dependencies>
    
    <build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.5</version>
				<configuration>
					<testFailureIgnore>true</testFailureIgnore>
					<includes>
						<include>**/*TestSuite.java</include>
					</includes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
		        <artifactId>maven-jar-plugin</artifactId>
				<version>2.3.1</version>

				<configuration>
		          <archive>
		            <manifestEntries>
						<Bundle-SymbolicName>org.kermeta.${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Name>${project.name}</Bundle-Name>
						<Bundle-Vendor>${bundle.vendor}</Bundle-Vendor>
						<Bundle-Version>${bundle.version}</Bundle-Version>
						<Bundle-ClassPath>.</Bundle-ClassPath>
						<Bundle-ActivationPolicy>lazy</Bundle-ActivationPolicy>
						<Bundle-Localization>plugin</Bundle-Localization>
						<Bundle-ManifestVersion>2</Bundle-ManifestVersion>
						<Bundle-Activator>org.kermeta.language.umlprofile2ecore.internal.Activator</Bundle-Activator>
						<Export-Package>
							org.kermeta.language.umlprofile2ecore
                        </Export-Package>
                        <Require-Bundle>
                            org.scala-ide.scala.library,
							fr.irisa.triskell.kermeta.model,
							org.kermeta.traceability.model,
							org.kermeta.language.framework.scala,
            				org.kermeta.language.model,
            				org.kermeta.language.umlprofile2ecore.api,
            				org.kermeta.utils.systemservices.api
                        </Require-Bundle>
                        <Import-Package>
                        	org.kermeta.language.umlprofile2ecore.api,
                        	org.eclipse.uml2.uml,
                        	org.eclipse.uml2.uml.util,
							org.eclipse.emf.common.notify,
							org.eclipse.emf.common.util,
							org.eclipse.emf.ecore,
							org.eclipse.emf.ecore.impl,
							org.eclipse.emf.ecore.resource,
							org.eclipse.emf.ecore.util,
							org.eclipse.emf.ecore.xmi,
							org.eclipse.emf.ecore.xmi.impl,
							org.osgi.framework;version="[1.5,2)",
							org.slf4j;version="[1.5,2)",
							utils					
                        </Import-Package>
		            </manifestEntries>		            
		          </archive>
		        </configuration>
			</plugin>
		</plugins>
	</build>
    
</project>