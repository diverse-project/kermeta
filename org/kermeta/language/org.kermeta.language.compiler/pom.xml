
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>language.compiler</artifactId>
    <packaging>jar</packaging>
    <name>language.compiler : Kermeta2 scala compiler</name>

    <parent>
        <groupId>org.kermeta.language</groupId>
        <artifactId>language.artcomponent.root</artifactId>
        <version>2.0.1-SNAPSHOT</version>
    </parent>

    <dependencies>
        <dependency>
            <groupId>${project.parent.groupId}</groupId>
            <artifactId>language.api</artifactId>
            <version>${kermeta.version}</version>
        </dependency>
        <dependency>
            <groupId>org.antlr</groupId>
            <artifactId>stringtemplate</artifactId>
            <version>3.2.1</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifestEntries>
                            <Bundle-SymbolicName>org.kermeta.${project.artifactId}</Bundle-SymbolicName>
                            <Bundle-Name>${project.name}</Bundle-Name>
                            <Bundle-Vendor>${bundle.vendor}</Bundle-Vendor>
                            <Bundle-ClassPath>.</Bundle-ClassPath>
                            <Export-Package>
                                org.kermeta.language.compiler.art2.impl
                            </Export-Package>
                            <Require-Bundle>
                                org.kermeta.language.model
                            </Require-Bundle>
                            <Import-Package>
                                org.eclipse.emf.common.notify,
                                org.eclipse.emf.common.util,
                                org.eclipse.emf.ecore,
                                org.eclipse.emf.ecore.impl,
                                org.eclipse.emf.ecore.resource,
                                org.eclipse.emf.ecore.util,
                                org.eclipse.emf.ecore.xmi,
                                org.eclipse.emf.ecore.xmi.impl,
                                org.kermeta.art2.framework,
                                org.kermeta.art2.framework.osgi,
                                org.kermeta.art2.framework.port,
                                org.kermeta.language.api.art2.port.utils,
                                org.kermeta.language.api.messaging,
                                org.kermeta.language.api.port,
                                org.kermeta.language.api.result,
                                org.kermeta.language.structure,
                                org.kermeta.traceability,
                                org.osgi.framework;version="[1.5,2)",
                                org.slf4j;version="[1.5,2)",
                                scala,
                                scala.actors,
                                scala.collection,
                                scala.collection.immutable,
                                scala.collection.mutable,
                                scala.reflect,
                                scala.runtime
                            </Import-Package>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.5</version>
                <configuration>
                    <testFailureIgnore>true</testFailureIgnore>
                    <includes>
                        <include>**/*TestSuite.java</include>
                        <include>**/*Test.java</include>
                    </includes>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>kermeta</id>
            <url>http://www.kermeta.org/maven2</url>
        </repository>
        <repository>
            <id>kermetaSnap</id>
            <url>http://www.kermeta.org/maven2-snapshots</url>
        </repository>
    </repositories>

</project>
