<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.kermeta.language</groupId>
	<artifactId>language.knownbug_tests</artifactId>
	<version>2.0.3-SNAPSHOT</version>
	<name>kp.compiler.commandline :: CommandLine interface for Kermeta 2 bytecode</name>
	<packaging>bundle</packaging>

	<parent>
		<groupId>org.kermeta.language</groupId>
		<artifactId>language.root</artifactId>
		<version>2.0.3-SNAPSHOT</version>
	</parent>

	<build>
		<plugins>
			
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>2.3.5</version>
				<extensions>true</extensions>

				<configuration>
					<instructions>
						<Bundle-SymbolicName>org.kermeta.${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Name>${project.name}</Bundle-Name>
						<Bundle-Vendor>${bundle.vendor}</Bundle-Vendor>
						<Bundle-Version>${bundle.version}</Bundle-Version>
						<Bundle-ActivationPolicy>lazy</Bundle-ActivationPolicy>
						<Bundle-ClassPath>.</Bundle-ClassPath>
						<Bundle-ManifestVersion>2</Bundle-ManifestVersion>
						<Export-Package>
							org.kermeta.kp.compiler.commandline.*
						</Export-Package>
						<Require-Bundle>
						</Require-Bundle>
						<Import-Package>
							!javax.*,
							!org.kermeta.language.language.ecore2km.org.eclipse.emf.ecore,
							!org.apache.commons.cli;version="[0,)",
							*
						</Import-Package>
						<Private-Package>
						</Private-Package>
					</instructions>
				</configuration>
			</plugin>
			<!-- test configuration -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.9</version>
				<configuration>
					<testFailureIgnore>true</testFailureIgnore>
					<includes>
						<include>**/*TestSuite.java</include>
					</includes>
				</configuration>
			</plugin>	 	
			<!-- Generating a better test report -->
			<plugin>
			    <artifactId>maven-antrun-plugin</artifactId>
			    <executions>
			      <execution>
			        <id>test-reports</id>
			        <phase>test</phase>
			        <configuration>
			          <target  unless="maven.test.skip">
			            <junitreport todir="target/surefire-reports" >
			              <fileset dir="target/surefire-reports">
			                <include name="**/*.xml"/>
			              </fileset>
			              <report format="frames" todir="target/surefire-reports"/>
			            </junitreport>
			          </target>
			        </configuration>
			        <goals>
			          <goal>run</goal>
			        </goals>
			      </execution>
			    </executions>
			    <dependencies>
			      <dependency>
			        <groupId>ant</groupId>
			        <artifactId>ant-junit</artifactId>
			        <version>1.6.5</version>
			      </dependency>
			    </dependencies>
			</plugin>
			<plugin>
			    <groupId>org.apache.maven.plugins</groupId>
			    <artifactId>maven-eclipse-plugin</artifactId>
			    <version>2.9</version>
			    <!-- see http://maven.apache.org/plugins/maven-eclipse-plugin/eclipse-mojo.html for more information -->
			    <configuration>
			      <downloadSources>true</downloadSources>
			      <downloadJavadocs>true</downloadJavadocs>
			      <projectNameTemplate>org.kermeta.[artifactId]</projectNameTemplate>
			      <projectnatures>
			        <projectnature>org.scala-ide.sdt.core.scalanature</projectnature>
			        <projectnature>org.eclipse.jdt.core.javanature</projectnature>
			      </projectnatures>
			      <buildcommands>
			        <buildcommand>org.scala-ide.sdt.core.scalabuilder</buildcommand>
			      </buildcommands>
			      <classpathContainers>
			        <classpathContainer>org.scala-ide.sdt.launching.SCALA_CONTAINER</classpathContainer>
			        <classpathContainer>org.eclipse.jdt.launching.JRE_CONTAINER</classpathContainer>
			      </classpathContainers>
			      <excludes>
			        <exclude>org.scala-lang:scala-library</exclude>
			        <!-- <exclude>org.scala-lang:scala-compiler</exclude> -->
			      </excludes>
			      <sourceIncludes>
			        <sourceInclude>**/*.scala</sourceInclude>
			        <sourceInclude>**/*.java</sourceInclude>
			      </sourceIncludes>
			      <useProjectReferences>false</useProjectReferences>
			    </configuration>
			  </plugin>
			  <plugin>
		        <groupId>org.codehaus.mojo</groupId>
		        <artifactId>build-helper-maven-plugin</artifactId>
		        <executions>
		          <execution>
		            <id>add-source</id>
		            <phase>generate-sources</phase>
		            <goals>
		              <goal>add-source</goal>
		            </goals>
		            <configuration>
		              <sources>
		                <source>src/main/scala</source>
		              </sources>
		            </configuration>
		          </execution>
		        </executions>
		      </plugin>
		</plugins>
	</build>

	<dependencies>
		<!-- be careful to the order this has impacts on the classpath !!! -->
		
		
		<dependency> <!-- need to be before km2bytecode in order to ensure the version of maven for aether -->
			<groupId>org.kermeta.utils</groupId>
			<artifactId>utils.aether</artifactId>
			<version>${utils.version}</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.language</groupId>
			<artifactId>language.km2bytecode</artifactId>
			<version>${kermeta.version}</version>
            <exclusions>
                <exclusion>
                    <artifactId>maven-classpath-plugin</artifactId>
                    <groupId>com.github.joel1di1</groupId>
                </exclusion>
            </exclusions>
		</dependency>
		<dependency>
			<groupId>org.kermeta.kp</groupId>
			<artifactId>kp.compiler.commandline</artifactId>
			<version>${kermeta.version}</version>
		</dependency>
		<dependency>
			<groupId>commons-cli</groupId>
			<artifactId>commons-cli</artifactId>
			<version>[1.2,)</version>
			<type>jar</type>
		</dependency>

		<dependency>
			<groupId>org.scala-lang</groupId>
			<artifactId>scala-library</artifactId>
			<version>${scala.version}</version>
		</dependency>
		<dependency>
			<groupId>org.ops4j.pax.url</groupId>
			<artifactId>pax-url-mvn</artifactId>
			<version>1.2.5</version>
		</dependency>
		
		<!-- test dependencies -->
		<dependency>
			<groupId>org.eclipse.jdt</groupId>
			<artifactId>core</artifactId>
			<version>[3.6.0.0,)</version>
			<scope>test</scope>
		</dependency>		
		<dependency>
			<groupId>org.eclipse.core</groupId>
			<artifactId>runtime</artifactId>
			<version>[3.6.0.0,)</version>
			<scope>test</scope>
		</dependency>
		<dependency>
        	<groupId>org.kermeta.language</groupId>
        	<artifactId>language.helper.tests</artifactId>
        	<version>${kermeta.version}</version>
			<scope>test</scope>
        </dependency>
	</dependencies>
</project>

