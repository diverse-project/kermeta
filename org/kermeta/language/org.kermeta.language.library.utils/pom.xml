
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>language.library.utils</artifactId>
    <packaging>jar</packaging>
    <name>Kermeta :: Library :: Utils</name>

    <parent>
        <groupId>org.kermeta.language</groupId>
        <artifactId>language.root</artifactId>
        <version>2.0.99-SNAPSHOT</version>
    </parent>

    <build>
        <plugins>
           <!-- Kermeta Compiler plugin -->
            <plugin>
                <groupId>org.kermeta.kp</groupId>
                <artifactId>kp.compiler.mavenplugin</artifactId>
                <version>${kermeta.version}</version>
                <extensions>true</extensions>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <kp>project.kp</kp>
                            <resourceOutputDirectory>${project.build.directory}/resources</resourceOutputDirectory>
                            <targetGroupId>${project.groupId}</targetGroupId>
                            <targetArtifactId>${project.artifactId}</targetArtifactId>
                            <stopAfterPhase>GENERATE_SCALA</stopAfterPhase>
                           	<checkingEnabled>true</checkingEnabled>
                            <intermediateFilesRequired>true</intermediateFilesRequired>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- add generated sources for scala -->
            <plugin>
		        <groupId>org.codehaus.mojo</groupId>
		        <artifactId>build-helper-maven-plugin</artifactId>
		        <executions>
		          <execution>
		            <id>add-source</id>
		            <phase>generate-sources</phase>
		            <goals>
		              <goal>add-source</goal>
		            </goals>
		            <configuration>
		              <sources>
		                <source>target/scala</source>
		              </sources>
		            </configuration>
		          </execution>
		        </executions>
		      </plugin>
            <!-- package into a jar for OSGI -->
            <plugin>
		        <groupId>org.apache.maven.plugins</groupId>
		        <artifactId>maven-jar-plugin</artifactId>
		        <version>2.3.1</version>
		        <configuration>
		          <archive>
		            <manifestEntries>
			            <Bundle-SymbolicName>org.kermeta.${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.name}</Bundle-Name>
                        <Bundle-Vendor>${bundle.vendor}</Bundle-Vendor>
						<Bundle-Version>${bundle.version}</Bundle-Version>
                        <Bundle-ClassPath>.</Bundle-ClassPath>
                        <Bundle-ManifestVersion>2</Bundle-ManifestVersion>
                        <Require-Bundle>
                        </Require-Bundle>
                        <Export-Package>
                        </Export-Package>
                        <Import-Package>
						</Import-Package>
		            </manifestEntries>		            
		          </archive>
		        </configuration>
      		</plugin>
        </plugins>
    </build>

    <dependencies>
    	<dependency>
            <groupId>${project.parent.groupId}</groupId>
            <artifactId>language.model</artifactId>
            <version>${kermeta.version}</version>
        </dependency>
        
    	<dependency> <!-- TODO find a way to retrieve this information directly from the kp -->
            <groupId>${project.parent.groupId}</groupId>
            <artifactId>language.library.standard</artifactId>
            <version>${kermeta.version}</version>
        </dependency>
    </dependencies>




</project>
