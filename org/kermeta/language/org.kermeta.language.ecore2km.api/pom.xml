<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <packaging>jar</packaging>
  <name>language.ecore2kma.api :: API for ecore2km</name>
  <artifactId>language.ecore2km.api</artifactId>
  
    <parent>
      <artifactId>language.root</artifactId>
      <groupId>org.kermeta.language</groupId>
      <version>2.0.6</version>
    </parent>
   
	<dependencies>
		<dependency>
			<groupId>${project.parent.groupId}</groupId>
			<artifactId>language.model</artifactId>
			<version>${kermeta.version}</version>
		</dependency>
	</dependencies>
  
	<build>
		<sourceDirectory>src/main/java</sourceDirectory>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
		        <artifactId>maven-jar-plugin</artifactId>

				<configuration>
		          <archive>
		            <manifestEntries>
						<Bundle-SymbolicName>org.kermeta.${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Name>org.kermeta.${project.artifactId}</Bundle-Name>
						<Bundle-Version>${bundle.version}</Bundle-Version>
						<Manifest-Version>1.0</Manifest-Version>
						<Bundle-ActivationPolicy>lazy</Bundle-ActivationPolicy>
 						<Bundle-Localization>plugin</Bundle-Localization>
 						<Bundle-ManifestVersion>2</Bundle-ManifestVersion>					
						<Bundle-ClassPath>.</Bundle-ClassPath>
						<Export-Package>
							org.kermeta.language.ecore2km.api
						</Export-Package>
						<Require-Bundle>
							org.kermeta.language.model				
                        </Require-Bundle>
		            </manifestEntries>		            
		          </archive>
		        </configuration>
			</plugin>
		</plugins>
	</build>
  
</project>