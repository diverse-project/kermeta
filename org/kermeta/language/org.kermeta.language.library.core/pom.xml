
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>language.library.core</artifactId>
    <packaging>jar</packaging>
    <name>Kermeta :: Library :: Core</name>

    <parent>
        <groupId>org.kermeta.language</groupId>
        <artifactId>language.root</artifactId>
        <version>2.0.1-SNAPSHOT</version>
    </parent>

    <build>
        <plugins>
           <!-- Kermeta Compiler plugin -->
            <plugin>
                <groupId>org.kermeta.kp</groupId>
                <artifactId>kp.compiler.mavenplugin</artifactId>
                <version>2.0.1-SNAPSHOT</version>
                <extensions>true</extensions>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <kp>project.kp</kp>
                            <resourceOutputDirectory>${project.build.directory}/resources</resourceOutputDirectory>
                            <targetGroupId>${project.groupId}</targetGroupId>
                            <targetArtifactId>${project.artifactId}</targetArtifactId>
                            <generateKmOnly>true</generateKmOnly>
                            <intermediateFilesRequired>false</intermediateFilesRequired>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- package into a jar for OSGI -->
            <plugin>
		        <groupId>org.apache.maven.plugins</groupId>
		        <artifactId>maven-jar-plugin</artifactId>
		        <version>2.3.1</version>
		        <configuration>
		          <archive>
		            <manifestEntries>
			            <Bundle-SymbolicName>org.kermeta.${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.name}</Bundle-Name>
                        <Bundle-Vendor>${bundle.vendor}</Bundle-Vendor>
                        <Bundle-ClassPath>.</Bundle-ClassPath>
                        <Bundle-ManifestVersion>2</Bundle-ManifestVersion>
                        <Require-Bundle>
                            org.kermeta.scala.scala-library
                        </Require-Bundle>
                        <Export-Package>
                        	k2.io,
                        	k2.standard,
                        	k2.persistence,
                        	k2.exceptions,
                        	k2.utils,
                        	org.k2.compilo.scala.loader,
                        	org.k2.console
                        </Export-Package>
                        <Import-Package>
							k2.exceptions,
							k2.persistence,
							k2.standard,
							k2.utils,org.eclipse.emf.common.notify,
							org.eclipse.emf.common.util,
							org.eclipse.emf.ecore,
							org.eclipse.emf.ecore.impl,
							org.eclipse.emf.ecore.resource,
							org.eclipse.emf.ecore.resource.impl,
							org.eclipse.emf.ecore.xmi,
							org.eclipse.emf.ecore.xmi.impl,
							org.k2.compilo.scala.loader,
							org.k2.console,
							org.kermeta,
							org.kermeta.language.behavior,
							org.kermeta.language.structure
						</Import-Package>
		            </manifestEntries>		            
		          </archive>
		        </configuration>
      		</plugin>
        </plugins>
    </build>

    <dependencies>
    	<dependency>
            <groupId>${project.parent.groupId}</groupId>
            <artifactId>language.model</artifactId>
            <version>${kermeta.version}</version>
        </dependency>
        <!-- <dependency>
            <groupId>${project.parent.groupId}</groupId>
            <artifactId>language.api</artifactId>
            <version>${kermeta.version}</version>
        </dependency> -->
    </dependencies>




</project>
