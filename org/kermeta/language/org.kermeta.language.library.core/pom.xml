            <!-- package into a jar for OSGI -->
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.1.0</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Export-Package>k2.io,k2.standard,k2.persistence,k2.exceptions,k2.utils</Export-Package>
                        <Bundle-SymbolicName>org.k2.language.library.core</Bundle-SymbolicName>
                        <Import-Package>!k2.io,*</Import-Package>
                        <Bundle-ClassPath>.</Bundle-ClassPath>
                    </instructions>
