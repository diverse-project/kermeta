
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>language.library.core</artifactId>
    <packaging>bundle</packaging>
    <name>Kermeta :: Library :: Core</name>

    <parent>
        <groupId>org.kermeta.language</groupId>
        <artifactId>language.root</artifactId>
        <version>2.0.1-SNAPSHOT</version>
    </parent>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.1.0</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Export-Package>kermeta.io,kermeta.standard,kermeta.utils,kermeta.exceptions</Export-Package>
                        <Bundle-SymbolicName>org.kermeta.language.library.core</Bundle-SymbolicName>
                        <Import-Package>!kermeta.io,*</Import-Package>
                        <Bundle-ClassPath>.</Bundle-ClassPath>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>${project.parent.groupId}</groupId>
            <artifactId>language.api</artifactId>
            <version>${kermeta.version}</version>
        </dependency>
    </dependencies>


<repositories>
    <repository>
        <id>kermeta</id>
        <url>http://www.kermeta.org/maven2-snapshots</url>
    </repository>
</repositories>

</project>
