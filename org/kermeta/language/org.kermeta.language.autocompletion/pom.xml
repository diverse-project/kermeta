<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <artifactId>language.root</artifactId>
        <groupId>org.kermeta.language</groupId>
        <version>2.0.1-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>language.autocompletion</artifactId>
    <packaging>jar</packaging>
    <name>language.autocompletion :: classes to deal with autocompletion</name>

    <dependencies>    
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>language.model</artifactId>
            <version>${kermeta.version}</version>
        </dependency>
         <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>language.autocompletion.api</artifactId>
            <version>${kermeta.version}</version>
        </dependency> 
 		<dependency>
			<groupId>org.kermeta.emf</groupId>
			<artifactId>emf.lib</artifactId>
			<version>${emf.version}</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.utils</groupId>
			<artifactId>utils.systemservices.eclipse</artifactId>
			<version>${kermeta.version}</version>
		</dependency>
    </dependencies>
    
    <build>
        <plugins>    
            <!-- Add generated source to build cycle -->
 		  	<plugin>
		        <groupId>org.apache.maven.plugins</groupId>
		        <artifactId>maven-jar-plugin</artifactId>		        
          		<version>2.3.1</version>
		        <configuration>
		          <archive>
		            <manifestEntries>
			            <Bundle-SymbolicName>org.kermeta.${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.name}</Bundle-Name>
                        <Bundle-Vendor>${bundle.vendor}</Bundle-Vendor>
                        <Bundle-ClassPath>.</Bundle-ClassPath>
                        <Bundle-ManifestVersion>2</Bundle-ManifestVersion>
                        <Export-Package>
			org.kermeta.language.autocompletion
                        </Export-Package>
                        <Require-Bundle>
            org.kermeta.language.model,            
            org.kermeta.language.autocompletion.api,
			org.kermeta.utils.systemservices.api
                        </Require-Bundle>
                        <Import-Package>
   			org.eclipse.emf.common.notify,
			org.eclipse.emf.common.util,
			org.eclipse.emf.ecore,
			org.eclipse.emf.ecore.impl,
			org.eclipse.emf.ecore.resource,
			org.eclipse.emf.ecore.util,
			org.eclipse.emf.ecore.xmi,
			org.eclipse.emf.ecore.xmi.impl,
			org.kermeta.language.structure,
			org.kermeta.language.behavior,
			org.kermeta.language,
			org.kermeta.utils.systemservices.eclipse
                        </Import-Package>
		            </manifestEntries>		            
		          </archive>
		        </configuration>
      		</plugin>
        </plugins>
    </build>
</project>

