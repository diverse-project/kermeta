package org::kermeta::language::checker;


require kermeta

//require "platform:/lookup/kermetaV2Checker/metamodel/kermeta_java.ecore"
//require "platform:/lookup/kermetaV2Checker/metamodel/Diagnostic.kmt"

require "platform:/lookup/org.kermeta.language.checker/src/main/kermeta/checker/MDKChecker.kmt"
require "platform:/lookup/org.kermeta.language.checker/src/main/kermeta/checker/invariants/Package.kmt"

using org::kermeta::diagnostic
using org::kermeta::language::structure

class Checker
{
	operation check(mu : ModelingUnit) : DiagnosticModel is do 
		
		var diagnosticModel : DiagnosticModel init mu.getAllViolatedConstraints 
		result := diagnosticModel
		
	end
	
	operation checkObject(obj : Object) : DiagnosticModel is do
		
		var diagnosticModel : DiagnosticModel init obj.getAllViolatedConstraints 
		result := diagnosticModel
		
	end
}