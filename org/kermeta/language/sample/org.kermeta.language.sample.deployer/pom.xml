<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>language.sample.deployer</artifactId>
	<packaging>jar</packaging>
	<name>Kermeta 2 sample deployer</name>

    <parent>
        <artifactId>language.root</artifactId>
        <groupId>org.kermeta.language</groupId>
        <version>2.0.1-SNAPSHOT</version>
    </parent>
	<dependencies>
		<dependency>
			<groupId>org.osgi</groupId>
			<artifactId>org.osgi.core</artifactId>
			<version>${osgi.version}</version>
		</dependency>
		
        <dependency>
			<groupId>org.kermeta.utils</groupId>
			<artifactId>utils.helpers.eclipse</artifactId>
			<version>${utils.version}</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.core.commands</artifactId>
			<version>[3.5.0.0,)</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.core.jobs</artifactId>
			<version>[3.4.0.0,)</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.core.runtime</artifactId>
			<version>[3.5.0.0,)</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.core.resources</artifactId>
			<version>[3.5.2.0,)</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.equinox.common</artifactId>
			<version>[3.5.1.0,)</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.equinox.registry</artifactId>
			<version>[3.4.0.0,)</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.ui</artifactId>
			<version>[3.5.0.0,)</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.ui.ide</artifactId>
			<version>[3.5.0.0,)</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.ui.views</artifactId>
			<version>[3.4.0.0,)</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.ui.workbench</artifactId>
			<version>[3.5.0.0,)</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.swt</artifactId>
			<version>[3.5.2.0,)</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.swt.gtk.linux.x86_64</artifactId>
			<version>[3.5.2.0,)</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.jface</artifactId>
			<version>[3.5.0.0,)</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.jface.text</artifactId>
			<version>[3.5.2.0,)</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.ui.editors</artifactId>
			<version>[3.5.0.0,)</version>
		</dependency>
		
		<dependency>
			<groupId>org.kermeta.utils</groupId>
			<artifactId>utils.systemservices.eclipse</artifactId>
			<version>${utils.version}</version>
		</dependency>
		<dependency>
			<groupId>fr.irisa.triskell.utilities</groupId>
			<artifactId>cache.utilities</artifactId>
			<version>0.1.0</version>
		</dependency>
        
	</dependencies>
	<build>
		<!-- Add resources from the plugin structure -->
        <resources>
	      	<resource>
	        	<directory>.</directory>
	        	<includes>
	          		<include>plugin.xml</include>
	        	</includes>
	      	</resource>
	      	<resource>
	        	<directory>./icons</directory>
	        	<targetPath>icons</targetPath>
	      	</resource>
	    </resources>
		<sourceDirectory>src/main/java</sourceDirectory>
		<plugins>
			<plugin>
	        <groupId>org.apache.maven.plugins</groupId>
	        <artifactId>maven-antrun-plugin</artifactId>
	        <version>1.3</version>
	        <executions>
				<execution>
					<phase>initialize</phase>
					<goals>
						<goal>run</goal>
					</goals>
            		<configuration>
						<tasks>
		                <mkdir dir="${project.build.outputDirectory}/zips"/>
		                
		                <zip destfile="${project.build.outputDirectory}/zips/org.kermeta.language.sample.class2rdbms.zip">
		                	<fileset dir="${basedir}/src/main/imported_samples/org.kermeta.language.sample.class2rdbms/"/>
		                </zip>
		              	</tasks>
            		</configuration>
	          	</execution>
	          </executions>
	      </plugin>
		
		
		
		
		
		
			<!-- package the result in a correct jar/bundle -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
		        <artifactId>maven-jar-plugin</artifactId>
				<version>2.3.1</version>
				<configuration>
		          <archive>
		            <manifestEntries>
						<Manifest-Version>1.0</Manifest-Version>
						<Bundle-SymbolicName>org.kermeta.${project.artifactId};singleton:=true</Bundle-SymbolicName>
						<Bundle-Name>org.kermeta.${project.artifactId}</Bundle-Name>						
						<Bundle-Vendor>${bundle.vendor}</Bundle-Vendor>
						<Bundle-Version>${bundle.version}</Bundle-Version>
						<Bundle-ActivationPolicy>lazy</Bundle-ActivationPolicy>
						<Bundle-Localization>plugin</Bundle-Localization>
						<Bundle-ManifestVersion>2</Bundle-ManifestVersion>
						<Bundle-Activator>org.kermeta.language.sample.deployer.Activator</Bundle-Activator>
						<Bundle-ActivationPolicy>lazy</Bundle-ActivationPolicy>						
						<Bundle-ClassPath>.</Bundle-ClassPath>
						<Export-Package>
							org.kermeta.language.sample.deployer,							
							org.kermeta.language.sample.deployer.wizards
						</Export-Package>
						<Require-Bundle>
							org.eclipse.core.runtime,
							org.eclipse.core.resources,
							org.eclipse.ui,
							org.eclipse.ui.workbench,
							org.eclipse.ui.ide,
							org.eclipse.equinox.registry,
							org.kermeta.utils.systemservices.api,
							org.kermeta.utils.systemservices.eclipse			
                        </Require-Bundle>
		            </manifestEntries>		            
		          </archive>
		        </configuration>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself.-->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.apache.maven.plugins
										</groupId>
										<artifactId>
											maven-antrun-plugin
										</artifactId>
										<versionRange>
											[1.3,)
										</versionRange>
										<goals>
											<goal>run</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	<groupId>org.kermeta.language.sample</groupId>
</project>