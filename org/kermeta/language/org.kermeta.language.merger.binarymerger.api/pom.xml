<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<packaging>jar</packaging>
	<name>language.merger.binarymerger.api :: API for KM binary merger</name>
	<artifactId>language.merger.binarymerger.api</artifactId>

    <parent>
        <artifactId>language.root</artifactId>
        <groupId>org.kermeta.language</groupId>
        <version>2.0.1-BETA4</version>
    </parent>
    
	<dependencies>
		<dependency>
			<groupId>${project.parent.groupId}</groupId>
			<artifactId>language.model</artifactId>
			<version>${kermeta.version}</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.utils</groupId>
			<artifactId>utils.systemservices.api</artifactId>
			<version>${kermeta.version}</version>
		</dependency>
	</dependencies>
    
	<build>
		<sourceDirectory>src/main/java</sourceDirectory>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
		        <artifactId>maven-jar-plugin</artifactId>

				<configuration>
		          <archive>
		            <manifestEntries>
						<Bundle-SymbolicName>org.kermeta.${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Name>org.kermeta.${project.artifactId}</Bundle-Name>
						<Bundle-Version>${bundle.version}</Bundle-Version>
						<Manifest-Version>1.0</Manifest-Version>
						<Bundle-ManifestVersion>2</Bundle-ManifestVersion>
						<Export-Package>
							org.kermeta.language.merger.binarymerger.api
                        </Export-Package>
                        <Require-Bundle>
            				org.kermeta.language.model
                        </Require-Bundle>
		            </manifestEntries>		            
		          </archive>
		        </configuration>
			</plugin>
		</plugins>
	</build>
</project>