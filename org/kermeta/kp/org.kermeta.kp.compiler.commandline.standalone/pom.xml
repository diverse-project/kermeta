<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.kermeta.kp</groupId>
	<artifactId>kp.compiler.commandline.standalone</artifactId>
	<version>2.0.1-SNAPSHOT</version>
	<name>kp.compiler.commandline :: CommandLine interface for Kermeta 2 bytecode</name>
	<packaging>bundle</packaging>

	<parent>
		<groupId>org.kermeta.language</groupId>
		<artifactId>language.root</artifactId>
		<version>2.0.1-SNAPSHOT</version>
	</parent>

	<build>
		<plugins>			
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>2.3.5</version>
				<extensions>true</extensions>

				<configuration>
					<instructions>
						<Embed-Dependency>*;scope=compile|runtime;inline=true</Embed-Dependency>
						<Embed-Transitive>true</Embed-Transitive>					
						<Bundle-SymbolicName>org.kermeta.${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Name>${project.name}</Bundle-Name>
						<Bundle-Vendor>${bundle.vendor}</Bundle-Vendor>
						<Bundle-Version>${bundle.version}</Bundle-Version>
						<Bundle-ActivationPolicy>lazy</Bundle-ActivationPolicy>
						<Bundle-ClassPath>.</Bundle-ClassPath>
						<Bundle-ManifestVersion>2</Bundle-ManifestVersion>
						<Export-Package>
							org.kermeta.kp.compiler.commandline.*
						</Export-Package>
						<Require-Bundle>
						</Require-Bundle>
						<Private-Package>
							!org.kermeta.kp.compiler.commandline.*,
							*
						</Private-Package>
						<Import-Package>
							!*
						</Import-Package>
						<Private-Package>
						</Private-Package>
					</instructions>
				</configuration>
			</plugin>
			
