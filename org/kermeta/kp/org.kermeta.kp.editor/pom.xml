<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.kermeta.kp</groupId>
	<artifactId>kp.editor</artifactId>
	<version>2.0.1-SNAPSHOT</version>
	<name>Kermeta :: KP Editor</name>
	<packaging>bundle</packaging>
	<build>
		<!-- Manage mutli-source java project. Copy the src files inside the targetPath, the unique location for maven compiling
		Drawback : once compiled the sources are not visible as java packages -->
		<sourceDirectory>target/filtered-sources</sourceDirectory>
		<outputDirectory>target/classes/</outputDirectory>
		<resources>
            <resource>
                <targetPath>${basedir}/target/filtered-sources</targetPath>
                <directory>src/main/java</directory>
            </resource>
            <resource>
                <targetPath>${basedir}/target/filtered-sources</targetPath>
                <directory>src/main/java-gen</directory>
            </resource>
			<resource>
				<directory>.</directory>
				<includes>
					<include>plugin.xml</include>
				</includes>
			</resource>
			<resource>
				<directory>icons</directory>
				<targetPath>icons</targetPath>
			</resource>
			<resource>
				<directory>css</directory>
				<targetPath>css</targetPath>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.0.2</version>
				<configuration>
					<argLine>-Xmx1024m</argLine>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>2.0.0</version>
				<extensions>true</extensions>

				<configuration>
					<instructions>
						<Bundle-SymbolicName>org.kermeta.${project.artifactId};singleton:=true</Bundle-SymbolicName>
						<Bundle-Activator>org.kermeta.kp.editor.mopp.KptPlugin</Bundle-Activator>
						<Require-Bundle>
							org.eclipse.core.runtime,
							org.eclipse.core.resources
                        </Require-Bundle>
						<Export-Package>
							org.kermeta.kp.editor,
							org.kermeta.kp.editor.analysis,
							org.kermeta.kp.editor.grammar,
							org.kermeta.kp.editor.mopp,
							org.kermeta.kp.editor.util
						</Export-Package>
						<!-- 	specify the packages that should be imported to correctly build the bundle (i.e <packaging>bundle<packaging> 
								".*" to also include sub packages
							use the ! for avoiding to import some packages that are already 
							there with the Require-Bundle -->
						<Import-Package>
							!org.eclipse.emf.*,
							!org.osgi.framework.*,
							!org.antlr.runtime.*,
							org.kermeta.kp,
							!org.eclipse.core.*
						</Import-Package>
						<Bundle-ClassPath>.</Bundle-ClassPath>
						<!-- add extra element in the manifest, copy them from this file ex: 
							Bundle-ActivationPolicy: lazy -->
						<_include>resources/META-INF/MANIFEST-part.MF</_include>
					</instructions>
				</configuration>
			</plugin>
			 <!-- copy generated MANIFEST in the project for eclipse user -->
             <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>truezip-maven-plugin</artifactId>
                <version>1.0-beta-4</version>
                <executions>
                    <execution>
                        <id>copy-out-files</id>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <phase>install</phase>
                        <configuration>
                            <files>
                                <file>
                                    <source>${project.build.outputDirectory}/META-INF/MANIFEST.MF</source>
                                    <outputDirectory>${project.basedir}/META-INF</outputDirectory>
                                </file>
                            </files>
                        </configuration>
                    </execution>

                </executions>
            </plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.kermeta.emf</groupId>
			<artifactId>emf.lib</artifactId>
			<version>2.6.0</version>
			<scope>compile</scope>
			<optional>false</optional>
		</dependency>
		<dependency>
			<groupId>org.kermeta.kp</groupId>
			<artifactId>kp.model</artifactId>
			<version>2.0.1-SNAPSHOT</version>
			<scope>compile</scope>
			<optional>false</optional>
		</dependency>
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.core.runtime</artifactId>
			<version>3.5.0.v20090525</version>
			<scope>compile</scope>
			<optional>false</optional>
		</dependency>
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.core.resources</artifactId>
			<version>3.5.2.R35x_v20091203-1235</version>
			<scope>compile</scope>
			<optional>false</optional>
		</dependency>
		<dependency>
			<groupId>org.antlr</groupId>
			<artifactId>antlr-runtime</artifactId>
			<version>3.2</version>
			<scope>compile</scope>
			<optional>false</optional>
		</dependency>
		<dependency>
			<groupId>org.osgi</groupId>
			<artifactId>org.osgi.core</artifactId>
			<version>4.2.0</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.equinox.common</artifactId>
			<version>3.5.1.R35x_v20090807-1100</version>
			<type>bundle</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.equinox.registry</artifactId>
			<version>3.4.100.v20090520-1800</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.core.jobs</artifactId>
			<version>3.4.100.v20090429-1800</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.kermeta.eclipse</groupId>
			<artifactId>org.eclipse.emf.validation</artifactId>
			<version>1.3.0.v200901271722</version>
			<scope>compile</scope>
		</dependency>
	</dependencies>
	<distributionManagement>
		<repository>
			<id>tipimouss-local-maven-repository</id>
			<name>Tipimouss Local release repository</name>
			<url>file:/var/www/html/maven2</url>
			<uniqueVersion>false</uniqueVersion>
		</repository>
		<snapshotRepository>
			<id>tipimouss-local-maven-snapshot-repository</id>
			<name>Tipimouss Local snapshot repository</name>
			<url>file:/var/www/html/maven2-snapshots</url>
			<uniqueVersion>false</uniqueVersion>
		</snapshotRepository>
	</distributionManagement>
</project>