	<modelVersion>4.0.0</modelVersion>
	<groupId>org.kermeta.kp</groupId>
	<artifactId>kp.editor.ui</artifactId>
	<version>2.0.0-SNAPSHOT</version>
	<name>Kermeta :: KP Editor UI</name>
	<packaging>bundle</packaging>
	<build>
		<!-- Manage mutli-source java project. Copy the src files inside the targetPath, the unique location for maven compiling
		Drawback : once compiled the sources are not visible as java packages -->
		<sourceDirectory>src-gen/</sourceDirectory>
		<outputDirectory>target/classes/</outputDirectory>
		<resources>
            <!-- <resource>
                <targetPath>${basedir}/target/filtered-sources</targetPath>
                <directory>src</directory>
            </resource> 
            <resource>
                <targetPath>${basedir}/target/filtered-sources</targetPath>
                <directory>src-gen</directory>
            </resource>-->
			<resource>
				<directory>.</directory>
				<includes>
					<include>plugin.xml</include>
				</includes>
			</resource>
			<resource>
				<directory>icons</directory>
				<targetPath>icons</targetPath>
			</resource>
			<resource>
				<directory>css</directory>
				<targetPath>css</targetPath>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.0.2</version>
				<configuration>
					<argLine>-Xmx1024m</argLine>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>2.0.0</version>
				<extensions>true</extensions>

				<configuration>
					<instructions>
						<Bundle-SymbolicName>org.kermeta.${project.artifactId};singleton:=true</Bundle-SymbolicName>
						<Bundle-Activator>org.kermeta.kp.editor.ui.KptUIPlugin</Bundle-Activator>
						<Require-Bundle>org.eclipse.core.runtime,
							org.eclipse.core.resources;visibility:=reexport,
							org.eclipse.core.commands,
							org.eclipse.ui,
							org.eclipse.ui.ide,
							org.eclipse.ui.views,
							org.eclipse.jface,	
							org.eclipse.jface.text,
							org.eclipse.ui.editors,
							org.eclipse.text,
							org.eclipse.ui.workbench,
							org.eclipse.ui.workbench.texteditor,
							org.kermeta.kp.model,
							org.antlr.runtime,
							org.eclipse.emf.ecore.resource;visibility:=reexport
						</Require-Bundle>
						<Export-Package>
						</Export-Package>
						<!-- 	specify the packages that should be imported to correctly build the bundle (i.e <packaging>bundle<packaging> 
								".*" to also include sub packages
							use the ! for avoiding to import some packages that are already 
							there with the Require-Bundle -->
						<Import-Package>
							!org.eclipse.core.resources,
							!org.eclipse.core.runtime, 
							!org.eclipse.core.runtime.jobs, 
							!org.eclipse.ui, 
							org.eclipse.ui.actions, 
							!org.eclipse.ui.dialogs, 
							!org.eclipse.ui.ide, 
							org.kermeta.kp,
							org.kermeta.kp.*,
							org.kermeta.kp.editor,
							!org.antlr.runtime,
							!org.eclipse.emf.*,
							!org.eclipse.emf.resource,
							org.eclipse.emf.edit.domain,
							!org.eclipse.jface.*, 
							!org.eclipse.swt.*,
							!org.eclipse.ui.*, 
							!org.osgi.framework,
							org.eclipse.core.runtime.preferences
						</Import-Package>
						<Bundle-ClassPath>.</Bundle-ClassPath>
						<!-- add extra element in the manifest, copy them from this file ex: 
							Bundle-ActivationPolicy: lazy -->
						<_include>resources/META-INF/MANIFEST-part.MF</_include>
					</instructions>
				</configuration>
			</plugin>
			<plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>truezip-maven-plugin</artifactId>
                <version>1.0-beta-4</version>
                <executions>
                    <execution>
                        <id>copy-out-files</id>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <phase>install</phase>
                        <configuration>
                            <files>
                                <file>
                                    <source>${project.build.outputDirectory}/META-INF/MANIFEST.MF</source>
                                    <outputDirectory>${project.basedir}/META-INF</outputDirectory>
                                </file>
                            </files>
                        </configuration>
                    </execution>

                </executions>
            </plugin>     
		</plugins>
	</build>
