	<parent>
    <groupId>org.kermeta.language</groupId>
    <artifactId>language.root</artifactId>
    <version>2.0.2</version>
  </parent>
  
	<build>
		<!-- Manage mutli-source java project. Copy the src files inside the targetPath, the unique location for maven compiling
		Drawback : once compiled the sources are not visible as java packages -->
		<sourceDirectory>src-gen/</sourceDirectory>
		<outputDirectory>target/classes/</outputDirectory>
		<resources>
			<resource>
				<directory>.</directory>
				<includes>
					<include>plugin.xml</include>
				</includes>
			</resource>
			<resource>
				<directory>icons</directory>
				<targetPath>icons</targetPath>
			</resource>
			<resource>
				<directory>css</directory>
				<targetPath>css</targetPath>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.0.2</version>
				<configuration>
					<argLine>-Xmx1024m</argLine>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
		        <groupId>org.apache.maven.plugins</groupId>
		        <artifactId>maven-jar-plugin</artifactId>
		        <version>2.3.2</version>
		        <configuration>
		          <archive>
		            <manifestEntries>
			            <Bundle-SymbolicName>org.kermeta.${project.artifactId};singleton:=true</Bundle-SymbolicName>
                        <Bundle-Name>${project.name}</Bundle-Name>
                        <Bundle-Vendor>${bundle.vendor}</Bundle-Vendor>
						<Bundle-Version>${bundle.version}</Bundle-Version>
                        <Bundle-ClassPath>.</Bundle-ClassPath>
                        <Bundle-ManifestVersion>2</Bundle-ManifestVersion>
                        <Bundle-ActivationPolicy>lazy</Bundle-ActivationPolicy>
                        <Bundle-Activator>org.kermeta.kp.editor.ui.KpUIPlugin</Bundle-Activator>
                        <Export-Package>
                        	org.kermeta.kp.editor.ui
                        </Export-Package>
                        <Require-Bundle>
							org.eclipse.core.resources,
							org.emftext.access;resolution:=optional,
							org.eclipse.core.expressions,
							org.eclipse.debug.core,
							org.eclipse.debug.ui,
							org.eclipse.emf,
							org.eclipse.emf.codegen.ecore,
							org.eclipse.emf.ecore,
							org.eclipse.emf.ecore.edit,
							org.eclipse.emf.edit.ui,
							org.eclipse.emf.workspace,
							org.eclipse.jface,
							org.eclipse.jface.text,
							org.eclipse.ui,
							org.eclipse.ui.editors,
							org.eclipse.ui.ide,
							org.eclipse.ui.views,
							org.kermeta.kp.editor,
							org.emftext.commons.antlr3_3_0,
							org.kermeta.kp.model
						</Require-Bundle>
		            </manifestEntries>		            
		          </archive>
		        </configuration>
      		</plugin>
		  
		</plugins>
	</build>
