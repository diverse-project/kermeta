<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.kermeta.kp</groupId>
	<artifactId>kp.migrateV1ToV2</artifactId>
	<name>kp.migrateV1ToV2 :: Create a Kp file from kermeta V1 files</name>
	<packaging>bundle</packaging>

	<parent>
		<groupId>org.kermeta.language</groupId>
		<artifactId>language.root</artifactId>
		<version>2.0.1-SNAPSHOT</version>
	</parent>

	<build>
		<sourceDirectory>src</sourceDirectory>
		<resources>
			<resource>
				<directory>target/generated-sources/art2</directory>
			</resource>
			<resource>
				 <directory>.</directory>
        <includes>
            <include>plugin.xml</include>
            <include>build.properties</include>
        </includes>
				
			</resource>
		</resources>
		<plugins>
            <plugin>
		        <groupId>org.apache.maven.plugins</groupId>
		        <artifactId>maven-jar-plugin</artifactId>
		        <version>2.3.1</version>
		        <configuration>
		          <archive>
		            <manifestEntries>
			            <Bundle-SymbolicName>org.kermeta.${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.name}</Bundle-Name>
                        <Bundle-Vendor>${bundle.vendor}</Bundle-Vendor>
                        <Bundle-ClassPath>.</Bundle-ClassPath>
                        <Bundle-ManifestVersion>2</Bundle-ManifestVersion>
                        <Export-Package>
                        	org.kermeta.kp.migratev1tov2
                        	org.kermeta.kp.migratev1tov2.popup.actions
                        </Export-Package>
                        <Import-Package>
							java.io
							java.util
							org.eclipse.emf.common.util
							org.eclipse.emf.ecore.resource
							org.eclipse.emf.ecore.resource.impl
							org.kermeta.kp
							org.eclipse.core.resources
						</Import-Package>
		            </manifestEntries>		            
		          </archive>
		        </configuration>
      		</plugin>
      		<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.0.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>org.eclipse</groupId>
			<artifactId>org.eclipse.ui</artifactId>
			<version>${osgi.version}</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse</groupId>
			<artifactId>org.eclipse.core.runtime</artifactId>
			<version>${osgi.version}</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse</groupId>
			<artifactId>org.eclipse.emf</artifactId>
			<version>${osgi.version}</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse</groupId>
			<artifactId>org.eclipse.emf.ecore</artifactId>
			<version>${osgi.version}</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse</groupId>
			<artifactId>org.eclipse.core.resources</artifactId>
			<version>${osgi.version}</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.kp</groupId>
			<artifactId>kp.model</artifactId>
			<version>${kermeta.version}</version>
		</dependency>
	</dependencies>
</project>