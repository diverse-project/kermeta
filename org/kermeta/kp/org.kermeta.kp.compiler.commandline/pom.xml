<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.kermeta.kp</groupId>
	<artifactId>kp.compiler.commandline</artifactId>
	<name>kp.compiler.commandline :: CommandLine interface for Kermeta 2 bytecode</name>

	<parent>
		<groupId>org.kermeta.language</groupId>
		<artifactId>language.root</artifactId>
		<version>2.0.1-SNAPSHOT</version>
	</parent>

	<build>
		<plugins>


			<!-- Creation of the bundle jar and its manifest -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
		        <artifactId>maven-jar-plugin</artifactId>

		        <version>2.3.1</version>
		        <configuration>
		          <archive>
		            <manifestEntries>
						<Bundle-SymbolicName>org.kermeta.${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Name>org.kermeta.${project.artifactId}</Bundle-Name>
						<Manifest-Version>1.0</Manifest-Version>
						<Bundle-ActivationPolicy>lazy</Bundle-ActivationPolicy>
						<Bundle-ManifestVersion>2</Bundle-ManifestVersion>
						<Bundle-ClassPath>.</Bundle-ClassPath>
						<Export-Package>
								org.kermeta.kp.compiler.commandline
                        </Export-Package>
						<Require-Bundle>
							org.kermeta.utils.systemservices.api,
							org.kermeta.utils.helpers,
            				fr.irisa.triskell.kermeta.model,
							org.kermeta.language.framework.scala,
							org.kermeta.language.ecore2km,
							org.kermeta.language.ecore2km.api,
							org.kermeta.language.loader.kmt.scala.api,
							org.kermeta.language.loader.kmt.scala,
							org.kermeta.language.checker,
							org.kermeta.language.checker.api,
							org.kermeta.diagnostic.model,
							org.kermeta.language.merger.binarymerger,
							org.kermeta.language.merger.binarymerger.api,
							org.kermeta.language.resolver,
							org.kermeta.language.resolver.api,
							org.kermeta.kp.model,
							org.kermeta.kp.loader.kp,
							org.kermeta.language.model,
							org.eclipse.emf.ecore,
							org.eclipse.emf.ecore.xmi,
							org.scala-ide.scala.library,
							org.ops4j.pax.url.mvn						
                        </Require-Bundle>
		            </manifestEntries>		            
		          </archive>
		        </configuration>
			</plugin>
			<!-- test configuration -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.5</version>
				<configuration>
					<testFailureIgnore>true</testFailureIgnore>
					<includes>
						<include>**/*TestSuite.java</include>
					</includes>
				</configuration>
			</plugin>	 	

		</plugins>
	</build>

	<dependencies>
		<!-- be careful to the order this has impacts on the classpath !!! -->

		<dependency>
			<groupId>org.kermeta.language</groupId>
			<artifactId>language.ecore2km</artifactId>
			<version>${kermeta.version}</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.language</groupId>
			<artifactId>language.ecore2km.api</artifactId>
			<version>${kermeta.version}</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.emf</groupId>
			<artifactId>emf.lib</artifactId>
			<version>${emf.version}</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.language</groupId>
			<artifactId>language.model</artifactId>
			<version>${kermeta.version}</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.language</groupId>
			<artifactId>language.loader.kmt.scala.api</artifactId>
			<version>${kermeta.version}</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.language</groupId>
			<artifactId>language.loader.kmt.scala</artifactId>
			<version>${kermeta.version}</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.language</groupId>
			<artifactId>language.merger.binarymerger</artifactId>
			<version>${kermeta.version}</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.language</groupId>
			<artifactId>language.resolver</artifactId>
			<version>${kermeta.version}</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.language</groupId>
			<artifactId>language.km2bytecode</artifactId>
			<version>${kermeta.version}</version>
            <exclusions>
                <exclusion>
                    <artifactId>maven-embedder-2.1-20080623-patched</artifactId>
                    <groupId>org.netbeans.external</groupId>
                </exclusion>
            </exclusions>
		</dependency>

		<dependency>
			<groupId>org.kermeta.kp</groupId>
			<artifactId>kp.loader.kp</artifactId>
			<version>${kermeta.version}</version>
		</dependency>
		<dependency>
			<groupId>commons-cli</groupId>
			<artifactId>commons-cli</artifactId>
			<version>[1.2,)</version>
			<type>jar</type>
		</dependency>

		<dependency>
			<groupId>org.scala-lang</groupId>
			<artifactId>scala-library</artifactId>
			<!-- <version>[2.8.0,)</version> -->
			<version>${scala.version}</version>
		</dependency>
		<dependency>
			<groupId>org.ops4j.pax.url</groupId>
			<artifactId>pax-url-mvn</artifactId>
			<version>1.2.5</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.utils</groupId>
			<artifactId>utils.systemservices.api</artifactId>
			<version>${kermeta.version}</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.utils</groupId>
			<artifactId>utils.helpers</artifactId>
			<version>${kermeta.version}</version>
		</dependency>
		
		<dependency>
			<groupId>org.kermeta.language</groupId>
			<artifactId>language.checker.api</artifactId>
			<version>${kermeta.version}</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.language</groupId>
			<artifactId>language.checker</artifactId>
			<version>${kermeta.version}</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.diagnostic</groupId>
			<artifactId>diagnostic.model</artifactId>
			<version>${kermeta.version}</version>
		</dependency>
		
		
	</dependencies>

</project>
