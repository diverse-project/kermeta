<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.kermeta.kp</groupId>
	<artifactId>kp.loader.kp</artifactId>
	<name>kp.loader.kp :: Kp loader for Kermeta 2</name>
	<packaging>jar</packaging>

	<parent>
		<groupId>org.kermeta.language</groupId>
		<artifactId>language.root</artifactId>
		<version>2.0.6</version>
	</parent>

	<build>
		<sourceDirectory>src/main/java</sourceDirectory>
		<plugins>
            <plugin>
		        <groupId>org.apache.maven.plugins</groupId>
		        <artifactId>maven-jar-plugin</artifactId>
		        <version>2.3.2</version>
		        <configuration>
		          <archive>
		            <manifestEntries>
			            <Bundle-SymbolicName>org.kermeta.${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.name}</Bundle-Name>
                        <Bundle-Vendor>${bundle.vendor}</Bundle-Vendor>
						<Bundle-Version>${bundle.version}</Bundle-Version>
                        <Bundle-ClassPath>.</Bundle-ClassPath>
                        <Bundle-ManifestVersion>2</Bundle-ManifestVersion>
                        <Export-Package>
                        	org.kermeta.kp.loader.kp
                        </Export-Package>
						<Require-Bundle>
							org.kermeta.utils.systemservices.api
						</Require-Bundle>
                        <Import-Package>
							org.antlr.runtime3_3_0,
							org.eclipse.emf.common.notify,
							org.eclipse.emf.common.util,
							org.eclipse.emf.ecore,
							org.eclipse.emf.ecore.impl,
							org.eclipse.emf.ecore.resource,
							org.eclipse.emf.ecore.resource.impl,
							org.eclipse.emf.ecore.util,
							org.kermeta.kp,
							org.kermeta.kp.loader.kp.api,
							org.kermeta.kp.editor.mopp,
							org.osgi.framework;version="[1.5,2)"
						</Import-Package>
		            </manifestEntries>		            
		          </archive>
		        </configuration>
      		</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>org.osgi</groupId>
			<artifactId>org.osgi.core</artifactId>
			<version>${osgi.version}</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.kp</groupId>
			<artifactId>kp.model</artifactId>
			<version>${kermeta.version}</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.kp</groupId>
			<artifactId>kp.loader.kp.api</artifactId>
			<version>${kermeta.version}</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.kp</groupId>
			<artifactId>kp.parser.standalone</artifactId>
			<version>${kermeta.version}</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.utils</groupId>
			<artifactId>utils.systemservices.api</artifactId>
			<version>${kermeta.version}</version>
		</dependency>
		<dependency>
			<groupId>org.kermeta.emf</groupId>
			<artifactId>emf.lib</artifactId>
			<version>${emf.version}</version>
		</dependency>
	</dependencies>
</project>
