<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.kermeta.kompren</groupId>
	<artifactId>kompren.site</artifactId>
	<version>2.0.8</version>
	<name>Kompren site builder</name>

    <properties>
		<kompren.version>2.0.7-SNAPSHOT</kompren.version>
		<utils.version>2.0.2</utils.version>
		<traceability.version>2.0.2</traceability.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<emf.version>2.7.0</emf.version>
		<scala.version>[2.9.0,2.10.0)</scala.version>
		<framework.scala.version>1.4.4-SNAPSHOT</framework.scala.version>
		<kermeta.model.version>1.4.0</kermeta.model.version>
		<language.compiler.version>1.4.4-SNAPSHOT</language.compiler.version>
		<osgi.version>4.2.0</osgi.version>
		<slf4j.version>1.6.1</slf4j.version>
		<bundle.vendor>IRISA/INRIA</bundle.vendor>
    	<tycho.version>0.11.0</tycho.version>
    	<eclipse.repository.version>indigo</eclipse.repository.version>
	</properties>
	<build>
		<resources>
			<resource>
				<directory>src/filtered-resources</directory>
				<filtering>true</filtering>
			</resource>
			<resource>
				<directory>src/resources</directory>
			</resource>
		</resources>
		<plugins>
			<plugin>
		        <groupId>org.apache.maven.plugins</groupId>
		        <artifactId>maven-antrun-plugin</artifactId>
		        <version>1.3</version>
		        <executions>
					<execution>
						<id>gen-site-publish-feature-and-bundles</id>
						<phase>process-sources</phase>
						<configuration>
							<tasks>
								<ant antfile="build.xml" target="publish_jars" /> 
							</tasks>							
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
		          	</execution>
		          	<execution>
						<id>gen-site-deploy</id>
						<phase>compile</phase>
						<configuration>
							<tasks>
								<ant antfile="build.xml" target="deploy" /> 
							</tasks>							
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
		          	</execution>
		          </executions>
		          <dependencies>
                       <dependency>
                           <groupId>org.apache.ant</groupId>
                           <artifactId>ant-jsch</artifactId>
                           <version>1.7.1</version>
                       </dependency>
                       <dependency>
                           <groupId>com.jcraft</groupId>
                           <artifactId>jsch</artifactId>
                           <version>0.1.42</version>
                       </dependency>
                   </dependencies>
		    </plugin>
		    <plugin>
		        <groupId>org.apache.maven.plugins</groupId>
		        <artifactId>maven-dependency-plugin</artifactId>
		        <version>2.4</version>
		        <executions>
		          <execution>
		            <id>copy-dependencies</id>
		            <phase>package</phase>
		            <goals>
		              <goal>copy-dependencies</goal>
		            </goals>
		            <configuration>
		              <!-- configure the plugin here -->
		            </configuration>
		          </execution>
		        </executions>
		    </plugin>
			<plugin>
		        <groupId>org.apache.maven.plugins</groupId>
		        <artifactId>maven-dependency-plugin</artifactId>
		        <version>2.4</version>
		        <executions>
		        	<!--  use dependencies as input for plugins -->
		        	<execution>
		            	<id>copy-dependencies</id>
		            	<phase>generate-sources</phase>
		            	<goals>
		              		<goal>copy-dependencies</goal>
		            	</goals>
		            	<configuration>
		              		<!-- configure the plugin here -->
		              		<outputDirectory>${project.build.directory}/features_and_bundles/plugins</outputDirectory>
		            	</configuration>
		          	</execution>
		          	<!-- manually copy features -->
		          	<execution>
		            	<id>copy</id>
		            	<phase>generate-sources</phase>
		            	<goals>
		              		<goal>copy</goal>
		            	</goals>
			            <configuration>
			              <artifactItems>
			              	<artifactItem>
			                  <groupId>org.kermeta.kompren</groupId>
			                  <artifactId>kompren.feature</artifactId>
			                  <version>${kompren.version}</version>
			                  <outputDirectory>${project.build.directory}/features_and_bundles/features</outputDirectory>
			                </artifactItem>
			              </artifactItems>
			              <!-- other configurations here -->
			        	</configuration>
			    	</execution>
		        </executions>
			</plugin>
			<!-- calculate the bundle version from the project version : replace -SNAPSHOT 
				by .SNAPSHOT_${timestamp} -->
			<plugin>
				<groupId>org.codehaus.groovy.maven</groupId>
				<artifactId>gmaven-plugin</artifactId>
				<version>1.0</version>
				<executions>
					<execution>
						<id>generate_feature_jar_version</id>
						<phase>process-sources</phase>
						<goals>
							<goal>execute</goal>
						</goals>
						<configuration>
							<source>
								String dirString= "target/updatesite/features"
								println "look into "+dirString + " for defining properties from jar names"
								def dir = new File(dirString)
								dir.eachFile { 
								    if (it.isFile()) {
								        String jarPropName = it.getName().substring(0,it.getName().indexOf(".feature_")) + ".feature.jar"
	        							String propValue  = it.getName()
	        							println "\${"+jarPropName + "} = " +propValue
	        							project.properties.setProperty(jarPropName,propValue)
	        							
								        String versionPropName = it.getName().substring(0,it.getName().indexOf(".feature_")) + ".feature.version"
								        String versionValue  = it.getName().substring(it.getName().indexOf(".feature_")+9,it.getName().indexOf(".jar"))
	        							println "\${"+versionPropName + "} = " +versionValue
	        							project.properties.setProperty(versionPropName,versionValue)
								    }
								}
							</source>
						</configuration>
					</execution>
				</executions>
			</plugin>	
		</plugins>
		<pluginManagement>
			<plugins>
				<!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself.-->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.apache.maven.plugins
										</groupId>
										<artifactId>
											maven-antrun-plugin
										</artifactId>
										<versionRange>
											[1.3,)
										</versionRange>
										<goals>
											<goal>run</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.kermeta.kompren</groupId>
			<artifactId>kompren.slicer.model</artifactId>
			<version>${kompren.version}</version>
			<exclusions>
				<exclusion>
					<groupId>*</groupId>
					<artifactId>*</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.kermeta.kompren</groupId>
			<artifactId>kompren.slicer.edit</artifactId>
			<version>${kompren.version}</version>
			<exclusions>
				<exclusion>
					<groupId>*</groupId>
					<artifactId>*</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.kermeta.kompren</groupId>
			<artifactId>kompren.slicer.editor</artifactId>
			<version>${kompren.version}</version>
			<exclusions>
				<exclusion>
					<groupId>*</groupId>
					<artifactId>*</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.kermeta.kompren</groupId>
			<artifactId>kompren.slicer.texteditor</artifactId>
			<version>${kompren.version}</version>
			<exclusions>
				<exclusion>
					<groupId>*</groupId>
					<artifactId>*</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.kermeta.kompren</groupId>
			<artifactId>kompren.slicer.parser</artifactId>
			<version>${kompren.version}</version>
			<exclusions>
				<exclusion>
					<groupId>*</groupId>
					<artifactId>*</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.kermeta.kompren</groupId>
			<artifactId>kompren.slicer.compiler</artifactId>
			<version>${kompren.version}</version>
			<exclusions>
				<exclusion>
					<groupId>*</groupId>
					<artifactId>*</artifactId>
				</exclusion>
			</exclusions>
		</dependency>		
	</dependencies>
</project>