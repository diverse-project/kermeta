<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>kompren.gwelet</artifactId>
    <packaging>bundle</packaging>
    <name>kompren.gwelet :: Gwelet model visualiser</name>
    
    <parent>
        <groupId>org.kermeta.kompren</groupId>
        <artifactId>kompren.root</artifactId>
        <version>2.0.1-SNAPSHOT</version>
    </parent>
    
    <build>
	    <sourceDirectory>src</sourceDirectory>
        <plugins>
            <!-- Creation of the bundle jar and its manifest -->
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.3.7</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>org.kermeta.kompren.slicer.edit; singleton=true</Bundle-SymbolicName>
                        <Bundle-Name>${project.name}</Bundle-Name>
                        <Bundle-Vendor>${bundle.vendor}</Bundle-Vendor>
                        <Bundle-ManifestVersion>2</Bundle-ManifestVersion>
                        <Export-Package>
                        	org.kermeta.kompren.gwelet.*
                        </Export-Package>
                        <Import-Package>
                        	org.eclipse.emf.*,
                        	org.kermeta.kompren.org.kermeta.kompren.slicer.*,
                        	fr.inria.zvtm.*,
                        	*
                        </Import-Package>
                        <Bundle-ClassPath>.</Bundle-ClassPath>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.kermeta.emf</groupId>
            <artifactId>emf.lib</artifactId>
            <version>${emf.version}</version>
        </dependency>
		<dependency>
			<groupId>fr.inria.zvtm</groupId>
			<artifactId>zvtm-core</artifactId>
			<version>0.11.0</version>
		</dependency>
    </dependencies>
    
	<repositories>
		<repository>
			<id>zvtm repository</id>
			<url>http://zvtm.sourceforge.net/maven</url>
		</repository>
	</repositories>
</project>
