
<t:templates 	xmlns:t="http://nwalsh.com/docbook/xsl/template/1.0"
	    		xmlns:param="http://nwalsh.com/docbook/xsl/template/1.0/param"
        		xmlns:fo="http://www.w3.org/1999/XSL/Format"
        		xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

	<xsl:attribute-set name="titlepage.recto.title.style">
	  	<xsl:attribute name="font-family">Helvetica</xsl:attribute>
		<xsl:attribute name="font-size">30pt</xsl:attribute>
	 	<xsl:attribute name="font-weight">bold</xsl:attribute>
	  	<xsl:attribute name="color">navy</xsl:attribute>
	 	<xsl:attribute name="space-before">25pt</xsl:attribute> 
		<xsl:attribute name="space-after">25pt</xsl:attribute>	
		<xsl:attribute name="text-align">center</xsl:attribute>	
		<xsl:attribute name="border-bottom">solid black 0.5pt</xsl:attribute>
		<xsl:attribute name="padding">25pt</xsl:attribute>	
	</xsl:attribute-set>

	<xsl:attribute-set name="titlepage.recto.subtitle.style">
	  	<xsl:attribute name="font-family">Helvetica</xsl:attribute>
		<xsl:attribute name="font-size">22pt</xsl:attribute>
	 	<xsl:attribute name="font-weight">bold</xsl:attribute>
	  	<xsl:attribute name="color">navy</xsl:attribute>
	 	<xsl:attribute name="space-before">10pt</xsl:attribute> 
		<xsl:attribute name="space-after">10pt</xsl:attribute>	
		<xsl:attribute name="text-align">center</xsl:attribute>	
		<xsl:attribute name="padding">25pt</xsl:attribute>	
	</xsl:attribute-set>
		
	<xsl:attribute-set name="titlepage.recto.abstract.style">
	  	<xsl:attribute name="font-family">Times</xsl:attribute>
		<xsl:attribute name="font-size">10pt</xsl:attribute>
	 	<xsl:attribute name="font-weight">normal</xsl:attribute>
	  	<xsl:attribute name="color">black</xsl:attribute>
	 	<xsl:attribute name="space-before">50pt</xsl:attribute> 
		<xsl:attribute name="space-after">50pt</xsl:attribute>	
		<xsl:attribute name="text-align">justify</xsl:attribute>
		<xsl:attribute name="margin-left">3cm</xsl:attribute>
		<xsl:attribute name="margin-right">3cm</xsl:attribute>
		<xsl:attribute name="border-top">solid black 0.5pt</xsl:attribute>
		<xsl:attribute name="border-bottom">solid black 0.5pt</xsl:attribute>
	</xsl:attribute-set>
	
  <t:titlepage t:element="book" t:wrapper="fo:block" >         
    <t:titlepage-content t:side="recto"> 
      <mediaobject/>                 
      <title  xsl:use-attribute-sets="titlepage.recto.title.style" />
      <subtitle xsl:use-attribute-sets="titlepage.recto.subtitle.style"/>                       
      <author/>
      <contrib/>
      <edition/>
      <publishername/>
	  <copyright/>                                       
      <abstract xsl:use-attribute-sets="titlepage.recto.abstract.style" />
	  <pubdate/>
    </t:titlepage-content>
	<t:titlepage-content t:side="verso">                  
    <!--  <title/>
      <subtitle/>                       
      <author/>
      <contrib/>
      <edition/>
	  <pubdate/>
	  <copyright/> -->                                       
    </t:titlepage-content>
  </t:titlepage>
</t:templates>