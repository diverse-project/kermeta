<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <artifactId>art2.ui.framework</artifactId>
    <packaging>bundle</packaging>
    <name>ART2 :: UI FRAMEWORK</name>

    <parent>
        <artifactId>art2.root</artifactId>
        <groupId>org.kermeta.art2</groupId>
        <version>2.1.1</version>
    </parent>

    <build>
     	<plugins>
            <!-- Creation of the bundle jar and its manifest -->
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.1.0</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>                    	                  	                       
                        <Export-Package>
                        	org.jdesktop.swingx.*,*
                        </Export-Package>
                        <!-- use the ! for avoiding to import some packages that are already there with the Require-Bundle -->
                     	<Import-Package>
				!*
                        </Import-Package>                        
                        <!-- add extra element in the manifest, copy them from this file
                             ex: Bundle-ActivationPolicy: lazy -->
                        <!-- <_include>src/main/resources/MANIFEST-part.MF</_include> -->
                        <!-- embed any dependencies with artifactId swingx -->
			<Embed-Dependency>swingx</Embed-Dependency>
                        <!--<Embed-Transitive>true</Embed-Transitive>-->
                    </instructions>
                </configuration>	
            </plugin>
    	</plugins>
	</build>
    <dependencies>
        <dependency>
            <groupId>org.swinglabs</groupId>
            <artifactId>swingx</artifactId>
            <version>1.6</version>
        </dependency>
    </dependencies>

</project>
