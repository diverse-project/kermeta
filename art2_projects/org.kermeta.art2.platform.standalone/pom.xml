
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.kermeta.art2</groupId>
    <artifactId>org.kermeta.art2.platform.standalone</artifactId>
    <packaging>bundle</packaging>
    <version>2.2.1-SNAPSHOT</version>
    <name>ART2 :: Platform :: Standalone</name>
    <url>http://maven.apache.org</url>

    <properties>
        <org.osgi.framework.system.packages.extra>sun.misc</org.osgi.framework.system.packages.extra>
    </properties>

    <parent>
        <artifactId>art2.root</artifactId>
        <groupId>org.kermeta.art2</groupId>
        <version>2.2.1-SNAPSHOT</version>
    </parent>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>net.lag</groupId>
            <artifactId>configgy</artifactId>
            <version>2.8.0-1.5.5</version>
        </dependency>
        <dependency>
            <groupId>org.kermeta.emf</groupId>
            <artifactId>emf.lib</artifactId>
            <version>${emf.version}</version>
        </dependency>
        <dependency>
            <groupId>${parent.groupId}</groupId>
            <artifactId>art2.model</artifactId>
            <version>${art2.version}</version>
        </dependency>
        <dependency>
            <groupId>${parent.groupId}</groupId>
            <artifactId>art2.api</artifactId>
            <version>${art2.version}</version>
        </dependency>
        <dependency>
            <groupId>com.weiglewilczek.scala-lang-osgi</groupId>
            <artifactId>scala-library</artifactId>
            <version>${scala.version}</version>
        </dependency>
        <dependency>
            <groupId>org.kermeta.art2</groupId>
            <artifactId>art2.core</artifactId>
            <version>${art2.version}</version>
        </dependency>

        <dependency>
            <groupId>org.kermeta.art2</groupId>
            <artifactId>art2.framework</artifactId>
            <version>${art2.version}</version>
        </dependency>

        <dependency>
            <groupId>org.kermeta.art2</groupId>
            <artifactId>art2.deploy.osgi</artifactId>
            <version>${art2.version}</version>
        </dependency>
        <dependency>
            <artifactId>art2.adaptation.model</artifactId>
            <groupId>org.kermeta.art2</groupId>
            <type>jar</type>
            <version>${art2.version}</version>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>art2.kompare</artifactId>
            <version>${art2.version}</version>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.compendium</artifactId>
            <version>4.2.0</version>
        </dependency>
        <dependency>
            <groupId>org.ops4j.pax.url</groupId>
            <artifactId>pax-url-mvn</artifactId>
            <version>1.1.3</version>
        </dependency>
        <dependency>
            <groupId>org.ops4j.pax.url</groupId>
            <artifactId>pax-url-assembly</artifactId>
            <version>1.1.3</version>
        </dependency>

        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.6.1</version>
        </dependency>

        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-core</artifactId>
            <version>0.9.24</version>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
            <version>0.9.24</version>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>art2.framework.bus.netty</artifactId>
            <version>${art2.version}</version>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>art2.framework.bus.jmdns</artifactId>
            <version>${art2.version}</version>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>art2.framework.bus.jgroups</artifactId>
            <version>${art2.version}</version>
        </dependency>


        <dependency>
            <groupId>org.apache.felix</groupId>
            <artifactId>org.apache.felix.main</artifactId>
            <version>3.0.2</version>
        </dependency>
        <dependency>
            <groupId>org.apache.felix</groupId>
            <artifactId>org.apache.felix.shell.tui</artifactId>
            <version>1.4.1</version>
        </dependency>
        <dependency>
            <groupId>org.apache.felix</groupId>
            <artifactId>org.apache.felix.shell.remote</artifactId>
            <version>1.1.2</version>
        </dependency>


        <dependency>
            <groupId>com.weiglewilczek.scala-lang-osgi</groupId>
            <artifactId>scala-library</artifactId>
            <version>2.8.0</version>
        </dependency>



        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.6.1</version>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-core</artifactId>
            <version>0.9.24</version>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
            <version>0.9.24</version>
        </dependency>

        
    </dependencies>



    <build>
        <plugins>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>install</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeGroupIds>org.kermeta.art2,org.kermeta.emf,org.ops4j.pax.url,org.apache.felix,com.weiglewilczek.scala-lang-osgi,ch.qos.logback,org.slf4j</includeGroupIds>
                            <excludeArtifactIds>art2.annotation</excludeArtifactIds>
                            <outputDirectory>${project.build.directory}/art2Bundles</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>


            <plugin>
                <groupId>org.ops4j</groupId>
                <artifactId>maven-pax-plugin</artifactId>
                <version>1.4</version>
                <configuration>
                    <!--<framework>concierge</framework>-->
                    <noDependencies>true</noDependencies>
                    <provision>
                        <param>--noConsole</param>
                        <param>--log=DEBUG</param>
                        <param>--workingDirectory=${project.build.directory}/paxCache_${node.name}</param>
                    </provision>

                    <deployURLs>
                file:///${project.build.directory}/art2Bundles/scala-library-2.8.0.jar,
                file:///${project.build.directory}/art2Bundles/slf4j-api-1.6.1.jar,
                file:///${project.build.directory}/art2Bundles/logback-core-0.9.24.jar,
                file:///${project.build.directory}/art2Bundles/logback-classic-0.9.24.jar,
                file:///${project.build.directory}/art2Bundles/pax-url-assembly-1.1.3.jar,
                file:///${project.build.directory}/art2Bundles/pax-url-mvn-1.1.3.jar,
                file:///${project.build.directory}/art2Bundles/emf.lib-2.6.0.jar,
                file:///${project.build.directory}/art2Bundles/org.apache.felix.shell-1.4.1.jar,
                file:///${project.build.directory}/art2Bundles/org.apache.felix.shell.tui-1.4.1.jar,
                file:///${project.build.directory}/art2Bundles/art2.model-${art2.version}.jar,
                file:///${project.build.directory}/art2Bundles/art2.adaptation.model-${art2.version}.jar,
                file:///${project.build.directory}/art2Bundles/art2.api-${art2.version}.jar,
                file:///${project.build.directory}/art2Bundles/art2.framework-${art2.version}.jar,
                file:///${project.build.directory}/art2Bundles/art2.framework.bus.netty-${art2.version}.jar,
                file:///${project.build.directory}/art2Bundles/art2.kompare-${art2.version}.jar,
                file:///${project.build.directory}/art2Bundles/art2.deploy.osgi-${art2.version}.jar,
                file:///${project.build.directory}/art2Bundles/art2.core-${art2.version}.jar,
                file:///${project.build.directory}/art2Bundles/art2.framework.bus.jmdns-${art2.version}.jar,
                file:///${project.build.directory}/art2Bundles/art2.framework.bus.jgroups-${art2.version}.jar
                    </deployURLs>
                </configuration>
            </plugin>


            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.1</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>java</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <mainClass>org.kermeta.art2.platform.standalone.App</mainClass>
                    <arguments>
                       <!-- <argument>argument1</argument> -->
                    </arguments>
                    <systemProperties>
                        <systemProperty>
                            <key>osgi.base</key>
                            <value>${project.build.directory}</value>
                        </systemProperty>
                        <systemProperty>
                            <key>bootstrap.bundles</key>
                            <value>${project.build.directory}/art2Bundles</value>
                        </systemProperty>
                        <systemProperty>
                            <key>bootstrap.version</key>
                            <value>${art2.version}</value>
                        </systemProperty>

                    </systemProperties>
                </configuration>
            </plugin>


            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-ClassPath>.</Bundle-ClassPath>
                        <Import-Package>!org.kermeta.art2.platform.standalone,!org.apache.*,*</Import-Package>
                        <Bundle-Activator>org.kermeta.art2.platform.standalone.BootstrapActivator</Bundle-Activator>
                    </instructions>
                </configuration>
            </plugin>

        </plugins>
    </build>

    <repositories>
        <repository>
            <id>Akka</id>
            <name>Akka Maven2 Repository</name>
            <url>http://www.scalablesolutions.se/akka/repository/ </url>
        </repository>
    </repositories>


</project>
