<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <bean id="corebean" class="org.kermeta.art2.core.impl.Art2CoreBean" init-method="init" destroy-method="stop">
        <property name="bundle" ref="blueprintBundle"/>
        <property name="bundleContext" ref="blueprintBundleContext"/>
        <property name="kompareService" ref="kompareService"/>
        <property name="deployService" ref="deployService"/>
        <property name="nodeName" value="duke.irisa.fr"/>
    </bean>

    <service ref="corebean" interface="org.kermeta.art2.api.service.core.handler.Art2ModelHandlerService" />

    <reference id="kompareService" interface="org.kermeta.art2.api.service.core.kompare.ModelKompareService" />
    <reference id="deployService" interface="org.kermeta.art2.api.service.adaptation.deploy.Art2AdaptationDeployService" />

</blueprint>