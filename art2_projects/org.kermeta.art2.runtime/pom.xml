
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>art2.runtime</artifactId>
    <packaging>bundle</packaging>
    <name>ART2 :: Core :: JMS</name>

    <groupId>${parent.groupId}</groupId>
    <version>${art2.version}</version>

    <parent>
        <artifactId>art2.root</artifactId>
        <groupId>org.kermeta.art2</groupId>
        <version>2</version>
    </parent>


    <dependencies>
        <dependency>
            <groupId>org.apache.activemq</groupId>
            <artifactId>activeio-core</artifactId>
            <version>3.1.2</version>
        </dependency>
        <dependency>
            <groupId>org.apache.activemq</groupId>
            <artifactId>activemq-core</artifactId>
            <version>5.3.2</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>art2.framework</artifactId>
            <version>${art2.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.scala-tools</groupId>
                <artifactId>maven-scala-plugin</artifactId>
                <executions>
                    <execution>
                        <id>scala-compile-first</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>add-source</goal>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>scala-test-compile</id>
                        <phase>process-test-resources</phase>
                        <goals>
                            <goal>testCompile</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <jvmArgs>
                        <jvmArg>-Xmx1024m</jvmArg>
                    </jvmArgs>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-ClassPath>.</Bundle-ClassPath>
                        <Import-Package>
                            !org.kermeta.art2.runtime.internal,
                            !org.kermeta.log4j.util,
                            !org.eclipse.core.*,
                            !org.apache.tools.ant.*,
                            !org.apache.maven.*,
                            !org.springframework.*,
                            !javax.annotation,
                            !com.*,
                            !javax.security.*,
                            !javax.sql.*,
                            !org.apache.derby.*,
                            !org.apache.xpath.*,
                            !javax.servlet.*,
                            !org.codehaus.jam,
                            !org.apache.xbean.*,
                            !org.objectweb.howl.*,
                            !org.apache.avalon.*,
                            !org.apache.log.*,
                            !org.apache.log4j.*,
                            !org.aspectj.*,
                            !org.aopalliance.*,
                            !javax.ejb,
                            !javax.xml.ws,
                            !org.apache.commons.*,
                            !com.thoughtworks.*,
                            org.eclipse.emf.*,
                            scala.*,
                            org.xml.*,
                            org.w3c.*,
                            org.osgi.*,
                            art2.*,
                            org.kermeta.art2.framework.*,
                            javax.xml.*,javax.net.*,javax.jms.*,javax.management.*,javax.naming.*,javax.transaction.*,
                         </Import-Package>
                        <Private-Package>
                            org.kermeta.log4j.util,kermeta.*,fr.irisa.triskell.kermeta.*,ScalaAspect.*,ScalaImplicit.*,kermeta.kunit,org.kermeta.komparator,org.kermeta.artKomparator,org.kermeta.art.deployer,org.kermeta.art.generator,runner,scalaUtil,
                            META-INF.services.org.apache.activemq.*,
                            org.springframework.context.*,
                            org.apache.xpath,org.apache.xbean.*,org.codehaus.jam,org.objectweb.howl.log,org.apache.avalon.*,org.apache.log.*,
                            org.kermeta.art2.runtime.broker,org.kermeta.art2.runtime.internal,
                            org.apache.activeio.*,
                            org.apache.activemq.*,
                            org.apache.kahadb.*,
                            org.apache.commons.*,
                       </Private-Package>
                       

                       <!-- <Import-Package>
                                                    !org.apache.maven.*,!javax.mail.*,!org.apache.tools.ant.*,!com.sun.jdmk.comm,!sun.misc,!org.kermeta.log4j.util,!org.eclipse.core.*,*
                        </Import-Package>
                        <Private-Package>
                                                    org.apache.commons.*,*
                        </Private-Package>
                        -->
			<!--<DynamicImport-Package>*</DynamicImport-Package>-->
                        <Export-Package>org.kermeta.art2.runtime,org.kermeta.art2.runtime.proxy</Export-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>


</project>

