<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
    http://www.osgi.org/xmlns/blueprint/v1.0.0 
    http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

	<!-- create hosted ports -->
	
		<bean id="helloServicePort" class="fr.irisa.triskell.osgi.componenttype.hello.port.HelloServicePortBean">
			<property name="container" ref="h1" />
		</bean>
	
		<service ref="helloServicePort" interface="fr.irisa.triskell.osgi.componenttype.hello.port.HelloServicePort">
			<service-properties>
				<entry key="artPorttyperefName" value="helloServicePort" />
				<entry key="artComponentinstanceName" value="h1" />
			</service-properties>
		</service>


	<!-- create needed port binding -->
	

	<!-- create the bean -->
	<bean id="h1" class="fr.irisa.triskell.osgi.componenttype.hello.HelloComponentBean" init-method="init" destroy-method="stop">
	
		<!-- property -->
		<property name="dictionary">
			<props>
				<prop key="art.name">h1</prop>
			</props>
		</property>
		<!-- end property -->
	
		<!-- inject hosted ports -->
		<property name="helloServicePort" ref="helloServicePort" />


		<!-- inject needed ports -->
	</bean>
</blueprint>