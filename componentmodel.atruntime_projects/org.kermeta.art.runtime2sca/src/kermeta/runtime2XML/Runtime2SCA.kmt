@mainClass "runtime2SCA::Main"
@mainOperation "main"


package runtime2SCA;


require kermeta
require "./system2composite.kmt"


using kermeta::standard
using kermeta::persistence
using kermeta::io
using art
using art::implem
using sca

class Main
{
	@main ""
	operation main() : Void is do
		var modelURI : String init "platform:/resource/org.kermeta.art.Runtime2SCA/src/kermeta/runtime2XML/Test4Ter.art"
		var file : String init "platform:/resource/org.kermeta.art.Runtime2SCA/src/kermeta/runtime2XML/Test4Ter.composite"
		
	 	mainWithParameter(modelURI, file)
	end
	
	operation mainWithParameter(modelURI : String, file : String) : Void is do
		
	 	var content : String
	 	var system : System init loadModel(EMFRepository.new, modelURI)
	
	 	var generator : SCA init SCA.new
	 	content := generator.generate(system) 
		stdio.write("Generating base configuration...")
		var fileWriter : FileIO init FileIO.new
		fileWriter.writeTextFile(file,content)
		stdio.write("OK!")
	end
	
	operation loadModel(repository : EMFRepository, model : String) : System is
	do
		var resource : Resource init repository.createResource(model, "platform:/plugin/org.kermeta.art.model/model/metamodel@runtime.ecore"/*"http://art"*/)
		resource.load
		result ?= resource.instances.one	
	end
}