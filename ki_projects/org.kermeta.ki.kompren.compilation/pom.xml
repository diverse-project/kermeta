
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.kermeta.ki</groupId>
    <artifactId>ki.kompren</artifactId>
    <packaging>jar</packaging>
    <version>1.0-SNAPSHOT</version>
    <name>Ki :: Kompren</name>

    <dependencies>
    
        <dependency>
            <groupId>org.kermeta.ki</groupId>
            <artifactId>org.kermeta.ki.malai.model</artifactId>
            <version>1.0-SNAPSHOT</version>
            <systemPath>/Users/ffouquet/NetBeansProjects/KiProject/org.kermeta.ki.kompren.compilation/lib/org.kermeta.ki.malai.jar</systemPath>
            <scope>system</scope>
        </dependency>
        <dependency>
            <groupId>org.kermeta.ki</groupId>
            <artifactId>org.kermeta.ki.malai.javabinding</artifactId>
            <version>1.0-SNAPSHOT</version>
            <systemPath>/Users/ffouquet/NetBeansProjects/KiProject/org.kermeta.ki.kompren.compilation/lib/org.kermeta.ki.malai.javaBinding.jar</systemPath>
            <scope>system</scope>
        </dependency>
        <dependency>
            <groupId>org.kermeta.ki</groupId>
            <artifactId>org.kermeta.ki.malai.extern</artifactId>
            <version>1.0-SNAPSHOT</version>
            <systemPath>/Users/ffouquet/NetBeansProjects/KiProject/org.kermeta.ki.kompren.compilation/lib/org.kermeta.ki.malai.extern.java.jar</systemPath>
            <scope>system</scope>
        </dependency>
        <dependency>
            <groupId>org.kermeta.ki</groupId>
            <artifactId>org.kermeta.ki.kompren.ui</artifactId>
            <version>1.0-SNAPSHOT</version>
            <systemPath>/Users/ffouquet/NetBeansProjects/KiProject/org.kermeta.ki.kompren.compilation/lib/org.kermeta.ki.kompren.ui.jar</systemPath>
            <scope>system</scope>
        </dependency>
        <dependency>
            <groupId>org.kermeta.ki</groupId>
            <artifactId>org.kermeta.ki.kompren.extern.java</artifactId>
            <version>1.0-SNAPSHOT</version>
            <systemPath>/Users/ffouquet/NetBeansProjects/KiProject/org.kermeta.ki.kompren.compilation/lib/org.kermeta.ki.kompren.extern.java.jar</systemPath>
            <scope>system</scope>
        </dependency>
        
        <dependency>
            <groupId>org.kermeta.ki</groupId>
            <artifactId>org.kermeta.ki.diagram</artifactId>
            <version>1.0-SNAPSHOT</version>
            <systemPath>/Users/ffouquet/NetBeansProjects/KiProject/org.kermeta.ki.kompren.compilation/lib/org.kermeta.ki.diagram.jar</systemPath>
            <scope>system</scope>
        </dependency>

        <dependency>
            <groupId>org.scala-lang</groupId>
            <artifactId>scala-library</artifactId>
            <version>2.8.0</version>
        </dependency>
        <dependency>
            <groupId>fr.irisa.triskell</groupId>
            <artifactId>kermeta.model</artifactId>
            <version>1.3.0</version>
        </dependency>
        <dependency>
            <groupId>org.kermeta.language</groupId>
            <artifactId>language.framework.scala</artifactId>
            <version>0.0.6</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
    </dependencies>
    
    <build>
        <plugins>
            <!-- Kermeta Compiler plugin -->
            
            <plugin>
                <groupId>org.kermeta.language</groupId>
                <artifactId>language.compiler.mavenplugin</artifactId>
                <version>1.0-SNAPSHOT</version>
                <extensions>true</extensions>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <model>km/Kompren.km</model>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            
            <!-- Add generated source to build cycle -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>1.5</version>
                <executions>
                    <execution>
                        <id>add-source</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>${project.build.directory}/generated-sources/kermeta</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- Scala plugin : allow to compile Scala file -->
            <plugin>
                <groupId>org.scala-tools</groupId>
                <artifactId>maven-scala-plugin</artifactId>
                <executions>
                    <execution>
                        <id>scala-compile-first</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>add-source</goal>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>scala-test-compile</id>
                        <phase>process-test-resources</phase>
                        <goals>
                            <goal>testCompile</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <jvmArgs>
                        <jvmArg>-Xmx1024m</jvmArg>
                    </jvmArgs>
                    <launchers>
                        <launcher>
                            <id>ki.kompren</id>
                            <mainClass>runner.MainRunner</mainClass>
          <!-- args are optional
                            <args>
                                <arg>arg1</arg>
                            </args> -->
                        </launcher>
                    </launchers>
                </configuration>
            </plugin>

        </plugins>
    </build>

</project>
