@uri "http://www.kermeta.org/ki/kontext"
package kontext;

require "kermeta"
require "platform:/resource/org.kermeta.ki.task/models/task.km"


class ContextToTask
{
	attribute constraints : ContextToTaskConstraint[0..*]
}



class ContextToTaskConstraint
{
	attribute exp : Expression

	attribute name : ecore::EString

	reference classes : ecore::EClass[1..*]

	reference tasks : task::Task[1..*]
}



class Expression
{
	attribute text : ecore::EString
}
