:- compiler_options([xpp_on]).

#include "flora_terms.flh"
#include "flora_exceptions.flh"


:- import flora_concat_atoms/2
	from flrporting.

:- import flora_shell_prefixdef/3 from flrregistry.

:- export
	FLLIBPREFIXDEF/3.


FLLIBPREFIXDEF(Mod,NameCode,BodyCode) :-
	flora_concat_atoms(['flora_prefix_',NameCode],PrefixCode),
	(flora_shell_prefixdef(Mod,PrefixCode,_)->retract(flora_shell_prefixdef(Mod,PrefixCode,_));true),
	assert(flora_shell_prefixdef(Mod,PrefixCode,BodyCode)).
