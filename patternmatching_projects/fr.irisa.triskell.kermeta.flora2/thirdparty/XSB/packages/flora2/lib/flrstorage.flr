#include "standard.h"

:- export
        %commit,
	%commit(?_),
	%purgedb(?_).

%commit :- flora_commit_storage@prolog(flrutils).

// This commit is only for user modules
%commit(?Module) :-
	flora_user_storage_name(?Module,?StorageName)@prolog(flrwrapper),
	flora_db_commit(?StorageName)@prolog(flrstoragebase),
	flora_db_reclaim_space(?StorageName)@prolog(flrstoragebase).

%purgedb(?Module) :-
	flora_user_storage_name(?Module,?StorageName)@prolog(flrwrapper),
	flora_db_delete_all(?StorageName)@prolog(flrstoragebase).


