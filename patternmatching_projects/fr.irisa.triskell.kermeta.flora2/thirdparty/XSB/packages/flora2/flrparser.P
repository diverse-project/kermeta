            Args = [Head,Body],
	    flora_comma_separated_list(Head,HeadList),
	    flora_dbliteral_list(FLCLS,HeadList,DWS,HeadCodeList,S),
            ( S == [] ->
                flora_body(Body,DWS,DWS,BodyCode,Status),
                ( Status == [] ->
                    flclause_struct(HeadCodeList,BodyCode,Code)
                ;
                    true
                )
