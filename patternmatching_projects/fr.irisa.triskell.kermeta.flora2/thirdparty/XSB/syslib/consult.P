	 ->	true
	 ;	file_write0(STDERR, 'Wrong type in argument 1 of load_dync/1'),
		fail
	),
	load_dync_nocheck(File,Dirin).
	
load_dync_nocheck(File,Dirin) :-
	load_dyn_convert(Dirin,Dir,load_dync),
	get_fname(File,SExt,Base,Mod),
	load_dync0(SExt,Base,Mod,Dir).

