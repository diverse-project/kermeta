						if (i>0) then ctx.res.append(",") end
						ctx.res.append("type == $" + ctx.cache.getValue(self.type))
						i:=i+1
					end
					if (~attribute.size>0) then
						if (i>0) then ctx.res.append(",") end
						var j : Integer init 0
						self.~attribute.each{a| 
							if (j>0) then ctx.res.append(",") end
							ctx.res.append("attribute contains $" + ctx.cache.getValue(a))
							j:=j+1
						}
						i:=i+1
					end
					if (self.subComponent.size > 0) then
