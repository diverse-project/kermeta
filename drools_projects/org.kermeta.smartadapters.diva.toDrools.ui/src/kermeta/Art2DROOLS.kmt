						var j : Integer init 0
						self.subComponent.each{s| if (j>0) then ctx.res.append(",") end
						ctx.res.append("subComponent contains $" + ctx.cache.getValue(s))
						j:=j+1
						}
						i:=i+1
					end
					
			
			if (binding.size>0) then
				if (i>0) then ctx.res.append(",") end
				var j : Integer init 0
				self.binding.each{b| 
					if (j>0) then ctx.res.append(",") end
					ctx.res.append("binding contains $" + ctx.cache.getValue(b))
					j:=j+1
				}
				i:=i+1
			end
				ctx.res.append(")\n")
			end
			end
