aspect class System
{
	method toDrools(ctx : patternframework::Context) : Void is do 
		var name : String init ctx.getGenerateName()
		ctx.cache.put(self,name)
		
		self.services.each{s | s.toDrools(ctx)}
		self.types.each{t | t.toDrools(ctx)}
		
		self.root.toDrools(ctx)
		
		var i : Integer init 0
		
		ctx.res.append("$")
		ctx.res.append(name) 
		ctx.res.append(": art.System(")
		ctx.res.append("root == $" + ctx.cache.getValue(self.root))	
		i := i+1
		
		if (self.services.size > 0) then
			if (i>0) then ctx.res.append(",") end
			var j : Integer init 0
			self.services.each{s| 
				if (j>0) then ctx.res.append(",") end
				ctx.res.append("services contains $" + ctx.cache.getValue(s))
				j:=j+1
			}
			i:=i+1
		end
		if (self.types.size > 0) then
			if (i>0) then ctx.res.append(",") end
			var j : Integer init 0
			self.types.each{s| 
				if (j>0) then ctx.res.append(",") end
				ctx.res.append("types contains $" + ctx.cache.getValue(s))
				j:=j+1
			}
			i:=i+1
		end
				
		ctx.res.append(")\n")
		
	end 
}

