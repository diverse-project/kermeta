<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>kompren.slicer.edit</artifactId>
    <packaging>bundle</packaging>
    <name>kompren.slicer.edit :: Kompren edit</name>
    
    <parent>
        <groupId>org.kermeta.kompren</groupId>
        <artifactId>kompren.root</artifactId>
        <version>2.0.9-SNAPSHOT</version>
    </parent>
    
    <build>
	    <sourceDirectory>src</sourceDirectory>
		<resources>
			<resource>
				<directory>.</directory>
				<includes>
					<include>plugin.properties</include>
					<include>plugin.xml</include>
				</includes>
			</resource>
			<resource>
				<directory>icons</directory>
				<targetPath>icons</targetPath>
			</resource>
		</resources>
        <plugins>

            <!-- Creation of the bundle jar and its manifest -->
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.3.7</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>org.kermeta.kompren.slicer.edit; singleton=true</Bundle-SymbolicName>
                        <Bundle-Name>${project.name}</Bundle-Name>
                        <Bundle-Vendor>${bundle.vendor}</Bundle-Vendor>
                        <Bundle-Version>${bundle.version}</Bundle-Version>
                        <Bundle-ManifestVersion>2</Bundle-ManifestVersion>
                        <Export-Package>
                        	org2.kermeta.kompren.slicer.provider.*,
                        	kompren.slicer.edit.popup.actions.*
                        </Export-Package>
                        <Require-Bundle>
                        	org.eclipse.core.runtime;visibility:=reexport,
                        	org.eclipse.core.jobs;visibility:=reexport,
                        	org.eclipse.emf.ecore.xmi;visibility:=reexport,
                        	org.eclipse.emf.ecore.edit;visibility:=reexport,
                        	org.eclipse.ui;visibility:=reexport,
                        	org.eclipse.ui.workbench;visibility:=reexport,
                        	org.eclipse.core.resources;visibility:=reexport,
                        	org.eclipse.jface;visibility:=reexport,
                        	org.eclipse.swt;visibility:=reexport,
                        	org.eclipse.emf.edit;visibility:=reexport,
                        	org.eclipse.ui.ide;visibility:=reexport,
                        	org.kermeta.kompren.slicer.compiler;visibility:=reexport,
                        	org.kermeta.kompren.slicer.model;visibility:=reexport,
                        	org.kermeta.kompren.slicer.parser;visibility:=reexport
                        </Require-Bundle>
                        <Import-Package>
                        	!org.eclipse.*,
                        	!org2.kermeta.kompren.*,
                        	!org.kermeta.kompren.*,
                        	org.osgi.framework;version="[1.5,2)"
                        </Import-Package>
                        <Bundle-ClassPath>.</Bundle-ClassPath>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
