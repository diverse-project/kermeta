<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>kompren.slicer.edit</artifactId>
    <packaging>bundle</packaging>
    <name>kompren.slicer.edit :: Kompren edit</name>
    
    <parent>
        <groupId>org.kermeta.kompren</groupId>
        <artifactId>kompren.root</artifactId>
        <version>2.0.0-SNAPSHOT</version>
    </parent>
    
    <build>
	    <sourceDirectory>src</sourceDirectory>
		<resources>
			<resource>
				<directory>.</directory>
				<includes>
					<include>plugin.properties</include>
					<include>plugin.xml</include>
				</includes>
			</resource>
			<resource>
				<directory>icons</directory>
				<targetPath>icons</targetPath>
			</resource>
		</resources>
        <plugins>

            <!-- Creation of the bundle jar and its manifest -->
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.1.0</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>org.kermeta.kompren.slicer.edit; singleton=true</Bundle-SymbolicName>
                        <Bundle-Name>${project.name}</Bundle-Name>
                        <Bundle-Vendor>${bundle.vendor}</Bundle-Vendor>
                        <Bundle-ManifestVersion>2</Bundle-ManifestVersion>
                        <Export-Package>
                        	org2.kermeta.kompren.slicer.provider.*
                        </Export-Package>
                        <Import-Package>
                        	org.eclipse.emf.*,
                        	org.osgi.framework;version="[1.5,2)",
                        	*
                        </Import-Package>
                        <Bundle-ClassPath>.</Bundle-ClassPath>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.kermeta.emf</groupId>
            <artifactId>emf.lib</artifactId>
            <version>${emf.version}</version>
        </dependency>
        <dependency>
            <groupId>org.kermeta.kompren</groupId>
            <artifactId>kompren.slicer.model</artifactId>
            <version>${kompren.version}</version>
        </dependency>
     <dependency>
      <groupId>org.kermeta.eclipse</groupId>
      <artifactId>org.eclipse.emf.edit</artifactId>
      <version>[2.6.0.0,)</version>
    </dependency>  
     <dependency>
      <groupId>org.kermeta.eclipse</groupId>
      <artifactId>org.eclipse.emf.ecore.edit</artifactId>
      <version>[2.6.0.0,)</version>
    </dependency>    
     <dependency>
      <groupId>org.kermeta.eclipse</groupId>
      <artifactId>org.eclipse.core.runtime</artifactId>
      <version>[3.5.0.0,)</version>
    </dependency>   
    <dependency>
        <groupId>org.osgi</groupId>
        <artifactId>org.osgi.core</artifactId>
        <version>4.2.0</version>
    </dependency>
    </dependencies>
</project>
