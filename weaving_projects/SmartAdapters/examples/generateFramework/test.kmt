@mainClass "test::frameworkGenerator"
@mainOperation "main"


package test;


require kermeta
require "../../program/specialize/AdaptationBuilder.kmt"

using kermeta::standard
using specialize

class frameworkGenerator
{
	operation main() : Void is do
		generateFSM()
		//generateClassDiag()
		//generateUML()
	end

	operation generateFSM() : Void is do 
		var specializer:AdaptationBuilder init AdaptationBuilder.new
		var domainMM:String init "platform:/resource/SmartAdapters/metamodel/domain/FSMMM.ecore"
		var domainMMPrime:String init "platform:/resource/SmartAdapters/metamodel/domain/FSMMMPattern.ecore"
		var ecore:String init "http://www.eclipse.org/emf/2002/Ecore" 
		var file:String init "C:\\temp\\FSM_AOM_Framework.kmt"
		specializer.generateFramework(domainMM, domainMMPrime, ecore, file)		
	end
	
	operation generateClassDiag() : Void is do 
		var specializer:AdaptationBuilder init AdaptationBuilder.new
		var domainMM:String init "platform:/resource/SmartAdapters/metamodel/domain/ClassMM.ecore"
		var domainMMPrime:String init "platform:/resource/SmartAdapters/metamodel/domain/ClassMMPattern.ecore"
		var ecore:String init "http://www.eclipse.org/emf/2002/Ecore" 
		var file:String init "C:\\temp\\simpleClassDiag_AOM_Framework.kmt"
		specializer.generateFramework(domainMM, domainMMPrime, ecore, file)		
	end	
	
	operation generateUML() : Void is do 
		var specializer:AdaptationBuilder init AdaptationBuilder.new
		var domainMM:String init "platform:/resource/SmartAdapters/metamodel/domain/ClassDiagUML.ecore"
		var domainMMPrime:String init "platform:/resource/SmartAdapters/metamodel/domain/UMLPattern.ecore"
		var ecore:String init "http://www.eclipse.org/emf/2002/Ecore" 
		var file:String init "C:\\temp\\UML_AOM_Framework.kmt"
		specializer.generateFramework(domainMM, domainMMPrime, ecore, file)		
	end	
	
	operation generateJava() : Void is do 
		var specializer:AdaptationBuilder init AdaptationBuilder.new
		var domainMM:String init "platform:/resource/SmartAdapters/metamodel/domain/UML.ecore"
		var domainMMPrime:String init "platform:/resource/SmartAdapters/metamodel/domain/UMLPattern.ecore"
		var ecore:String init "http://www.eclipse.org/emf/2002/Ecore" 
		var file:String init "C:\\temp\\UML_AOM_Framework.kmt"
		specializer.generateFramework(domainMM, domainMMPrime, ecore, file)		
	end	
