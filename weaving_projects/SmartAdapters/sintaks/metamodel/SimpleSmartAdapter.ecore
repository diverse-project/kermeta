<?xml version="1.0" encoding="UTF-8"?>
<ecore:EPackage xmi:version="2.0"
    xmlns:xmi="http://www.omg.org/XMI" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ecore="http://www.eclipse.org/emf/2002/Ecore" name="simpleSmartAdapters"
    nsURI="platform:/resource/SmartAdapters/sintaks/metamodel/SimpleSmartAdapter.ecore/simpleSmartAdapters"
    nsPrefix="simpleSmartAdapters">
  <eClassifiers xsi:type="ecore:EClass" name="Adapter">
    <eStructuralFeatures xsi:type="ecore:EAttribute" name="name" eType="ecore:EDataType http://www.eclipse.org/emf/2002/Ecore#//EString"/>
  </eClassifiers>
  <eClassifiers xsi:type="ecore:EClass" name="DerivableAdapter" eSuperTypes="#//Adapter">
    <eStructuralFeatures xsi:type="ecore:EReference" name="alternatives" upperBound="-1"
        eType="#//Alternative" containment="true"/>
    <eStructuralFeatures xsi:type="ecore:EReference" name="constraints" upperBound="-1"
        eType="#//Constraint" containment="true"/>
  </eClassifiers>
  <eClassifiers xsi:type="ecore:EClass" name="Alternative" eSuperTypes="#//AdapterElement">
    <eStructuralFeatures xsi:type="ecore:EReference" name="xor" upperBound="-1" eType="#//AdapterElement"
        containment="true"/>
  </eClassifiers>
  <eClassifiers xsi:type="ecore:EClass" name="AdapterElement" abstract="true">
    <eStructuralFeatures xsi:type="ecore:EAttribute" name="isOptional" eType="ecore:EDataType http://www.eclipse.org/emf/2002/Ecore#//EBoolean"/>
    <eStructuralFeatures xsi:type="ecore:EAttribute" name="name" eType="ecore:EDataType http://www.eclipse.org/emf/2002/Ecore#//EString"/>
  </eClassifiers>
  <eClassifiers xsi:type="ecore:EClass" name="Adaptation" eSuperTypes="#//AdapterElement"/>
  <eClassifiers xsi:type="ecore:EClass" name="Conjunction" eSuperTypes="#//AdapterElement">
    <eStructuralFeatures xsi:type="ecore:EReference" name="and" upperBound="-1" eType="#//AdapterElement"
        containment="true"/>
  </eClassifiers>
  <eClassifiers xsi:type="ecore:EClass" name="Constraint" abstract="true">
    <eOperations name="check"/>
  </eClassifiers>
  <eClassifiers xsi:type="ecore:EClass" name="MutualExclusion" eSuperTypes="#//Constraint">
    <eStructuralFeatures xsi:type="ecore:EReference" name="mutex" lowerBound="2" upperBound="-1"
        eType="#//AdapterElement"/>
  </eClassifiers>
  <eClassifiers xsi:type="ecore:EClass" name="Dependency" eSuperTypes="#//Constraint">
    <eStructuralFeatures xsi:type="ecore:EReference" name="source" lowerBound="1"
        eType="#//AdapterElement"/>
    <eStructuralFeatures xsi:type="ecore:EReference" name="dependencies" upperBound="-1"
        eType="#//AdapterElement"/>
  </eClassifiers>
  <eClassifiers xsi:type="ecore:EClass" name="Derivation">
    <eStructuralFeatures xsi:type="ecore:EReference" name="derivationElements" upperBound="-1"
        eType="#//DerivationElement" containment="true"/>
    <eStructuralFeatures xsi:type="ecore:EReference" name="selectedOptions" upperBound="-1"
        eType="#//AdapterElement"/>
  </eClassifiers>
  <eClassifiers xsi:type="ecore:EClass" name="DerivationElement">
    <eStructuralFeatures xsi:type="ecore:EReference" name="alternative" lowerBound="1"
        eType="#//Alternative"/>
    <eStructuralFeatures xsi:type="ecore:EReference" name="selectedVariant" lowerBound="1"
        eType="#//AdapterElement"/>
  </eClassifiers>
</ecore:EPackage>
