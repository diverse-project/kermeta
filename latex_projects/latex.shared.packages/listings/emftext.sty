\ProvidesFile{emftext.sty}
    [2010/09/01 0.1 listings language file for EMFText]

%% Kermeta Language
\definecolor{EMFTextRed}{rgb}{0.59,0,0}
\definecolor{EMFTextBlue}{rgb}{0,0,0.59}
\definecolor{EMFTextBlack}{rgb}{0,0,0}
\definecolor{EMFTextGreen}{rgb}{0,0.59,0}
\definecolor{EMFTextPurple}{rgb}{0.5,0,0.47}
\definecolor{EMFTextOrange}{cmyk}{0,0.40,0.95,0}
\definecolor{EMFTextOliveGreen}{cmyk}{0.64,0,0.95,0.40}

\lstdefinelanguage{emftext}
{
morekeywords=[0]{ SYNTAXDEF, FOR, START, IMPORTS, OPTIONS, TOKENS, TOKENSTYLES, RULES},
morekeywords=[1]{ DEFINE, COLOR },
sensitive=true,   
morecomment=[s][\color{EMFTextPurple}]{<}{>},	 % forces the whole < > to be colored, in case of // in the URL used by EMFText
morecomment=[l]{//},
morecomment=[s]{/*}{*/},
morestring=[b]",
}

\lstset{language=emftext,
   basicstyle=\small,			%\ttfamily,
   keywordstyle=[0]\small\bf\color{EMFTextRed},
   keywordstyle=[1]\small\color{EMFTextOrange},
   commentstyle=\color{EMFTextOliveGreen}, 
   stringstyle=\color{EMFTextBlue},
   tabsize=2,
   breaklines=true,
%   frame=single,
%   backgroundcolor=\color{Gris}    
}

\endinput

